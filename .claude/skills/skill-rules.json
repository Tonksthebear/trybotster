{
  "version": "1.0",
  "description": "Skill activation triggers for Claude Code working with Rails + Hotwire application",
  "skills": {
    "skill-developer": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Meta-skill for creating and managing Claude Code skills",
      "promptTriggers": {
        "keywords": [
          "skill system",
          "create skill",
          "add skill",
          "skill triggers",
          "skill rules",
          "hook system",
          "skill development",
          "skill-rules.json"
        ],
        "intentPatterns": [
          "(how do|how does|explain).*?skill",
          "(create|add|modify|build).*?skill",
          "skill.*?(work|trigger|activate|system)"
        ]
      }
    },
    "rails-backend-guidelines": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Rails backend patterns for controllers, models, services, and database",
      "promptTriggers": {
        "keywords": [
          "controller",
          "model",
          "service",
          "service object",
          "ActiveRecord",
          "migration",
          "database",
          "Rails backend",
          "Rails API",
          "strong parameters",
          "strong params",
          "validation",
          "association",
          "scope",
          "callback",
          "concern",
          "background job",
          "Solid Queue",
          "Active Job",
          "Action Cable",
          "has_many",
          "belongs_to",
          "has_one",
          "RESTful",
          "route",
          "routing",
          "webhook",
          "rails generate",
          "rails g",
          "db:migrate",
          "schema",
          "before_action",
          "authenticate"
        ],
        "intentPatterns": [
          "(create|add|implement|build).*?(controller|model|service|migration)",
          "(fix|handle|debug).*?(error|exception|Rails)",
          "(add|implement).*?(validation|association|scope)",
          "(organize|structure|refactor).*?(Rails|model|controller)",
          "(how to|best practice).*?(Rails|controller|model|service)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "app/controllers/**/*.rb",
          "app/models/**/*.rb",
          "app/services/**/*.rb",
          "app/jobs/**/*.rb",
          "app/channels/**/*.rb",
          "db/migrate/**/*.rb",
          "config/routes.rb"
        ],
        "pathExclusions": [
          "**/*_test.rb",
          "**/*_spec.rb",
          "test/**/*.rb",
          "spec/**/*.rb"
        ],
        "contentPatterns": [
          "class.*Controller < (ApplicationController|ActionController::Base)",
          "class.* < (ApplicationRecord|ActiveRecord::Base)",
          "has_many",
          "belongs_to",
          "validates",
          "scope :",
          "def (index|show|create|update|destroy)"
        ]
      }
    },
    "rails-frontend-guidelines": {
      "type": "guardrail",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Rails frontend with Hotwire (Turbo + Stimulus) and Tailwind CSS",
      "promptTriggers": {
        "keywords": [
          "view",
          "partial",
          "Turbo",
          "Turbo Frame",
          "Turbo Stream",
          "turbo_frame_tag",
          "turbo_stream_from",
          "Stimulus",
          "Stimulus controller",
          "stimulus_controller",
          "Hotwire",
          "Tailwind",
          "ERB",
          "template",
          "frontend",
          "JavaScript controller",
          "data-controller",
          "data-action",
          "data-target",
          "ViewComponent",
          "form_with",
          "turbo: true",
          "dom_id",
          "render partial",
          "render turbo_stream"
        ],
        "intentPatterns": [
          "(create|add|make|build).*?(view|partial|component|Stimulus)",
          "(how to|best practice).*?(Turbo|Stimulus|Hotwire)",
          "(style|design).*?(Tailwind|CSS)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "app/views/**/*.html.erb",
          "app/views/**/*.turbo_stream.erb",
          "app/javascript/controllers/**/*_controller.js",
          "app/components/**/*.rb",
          "app/components/**/*.html.erb"
        ],
        "pathExclusions": ["**/*_test.js", "**/*_spec.js"],
        "contentPatterns": [
          "turbo-frame",
          "turbo_stream",
          "data-controller=",
          "data-action=",
          "data-.*-target=",
          "from \"@hotwired/stimulus\"",
          "import.*Controller.*from"
        ]
      }
    }
  },
  "notes": {
    "enforcement_types": {
      "suggest": "Skill suggestion appears but doesn't block execution",
      "block": "Requires skill to be used before proceeding (guardrail)",
      "warn": "Shows warning but allows proceeding"
    },
    "priority_levels": {
      "critical": "Highest - Always trigger when matched",
      "high": "Important - Trigger for most matches",
      "medium": "Moderate - Trigger for clear matches",
      "low": "Optional - Trigger only for explicit matches"
    },
    "customization": {
      "pathPatterns": "Matched to Rails project structure (app/controllers, app/models, app/views, app/javascript)",
      "keywords": "Rails and Hotwire-specific terms",
      "intentPatterns": "Use regex for flexible user intent matching"
    }
  }
}
