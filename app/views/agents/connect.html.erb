<% content_for :head do %>
  <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/@xterm/xterm@5.5.0/css/xterm.min.css" %>
<% end %>

<div class="w-full max-w-7xl mx-auto px-2 lg:px-6"
     data-controller="secure-terminal"
     data-secure-terminal-csrf-token-value="<%= form_authenticity_token %>"
     data-secure-terminal-browser-device-id-value="<%= @browser_device&.id %>">

  <%# Header %>
  <div class="mb-4">
    <h1 class="text-2xl font-bold text-gray-900">Secure E2E Connection</h1>
    <p class="mt-1 text-sm text-gray-600">
      End-to-end encrypted terminal access. Key exchange bypasses server.
    </p>
  </div>

  <%# Security Notice %>
  <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-4">
    <div class="flex items-start">
      <svg class="w-5 h-5 text-green-600 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
      </svg>
      <div>
        <h3 class="text-sm font-medium text-green-800">MITM-Proof Key Exchange</h3>
        <p class="text-sm text-green-700 mt-1">
          The CLI's public key is transmitted via the URL fragment (#key=...), which is
          <strong>never sent to the server</strong>. This prevents man-in-the-middle attacks
          even if the server is compromised.
        </p>
      </div>
    </div>
  </div>

  <%# Connection Status %>
  <div class="bg-white shadow rounded-lg mb-4">
    <div class="px-4 py-3 flex flex-wrap items-center justify-between gap-2">
      <div data-secure-terminal-target="status" class="text-sm text-gray-500">
        Reading secure key from URL...
      </div>
      <div class="flex items-center gap-2">
        <button type="button"
                data-action="secure-terminal#disconnect"
                data-secure-terminal-target="disconnectBtn"
                class="hidden inline-flex items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
          Disconnect
        </button>
      </div>
    </div>
  </div>

  <%# Error State (shown if no key in URL) %>
  <div data-secure-terminal-target="errorPanel" class="hidden bg-red-50 border border-red-200 rounded-lg p-6 mb-4">
    <div class="flex items-start">
      <svg class="w-6 h-6 text-red-600 mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
      </svg>
      <div>
        <h3 class="text-lg font-medium text-red-800">No Secure Key Found</h3>
        <p class="text-sm text-red-700 mt-1">
          This page requires a secure connection URL from the CLI. Please scan the QR code
          displayed in your Botster CLI or use the full URL with the key fragment.
        </p>
        <p class="text-sm text-red-600 mt-2">
          Expected URL format: <code class="bg-red-100 px-1 rounded">/agents/connect#key=...&hub=...</code>
        </p>
        <a href="<%= agents_path %>" class="inline-block mt-4 text-sm text-red-700 underline hover:text-red-800">
          &larr; Go to standard agents page
        </a>
      </div>
    </div>
  </div>

  <%# Terminal Panel (shown when key is valid) %>
  <div data-secure-terminal-target="terminalPanel" class="hidden">
    <div class="shadow lg:rounded-lg overflow-hidden bg-[#1e1e1e]">
      <div class="px-2 py-1.5 lg:px-3 lg:py-2 border-b border-gray-700 flex items-center justify-between bg-[#2d2d2d]">
        <div class="flex items-center gap-2">
          <h2 class="text-xs lg:text-sm font-medium text-gray-300">Secure Terminal</h2>
          <span class="text-xs text-gray-500" data-secure-terminal-target="hubInfo">Connecting...</span>
        </div>
        <div class="flex items-center gap-2">
          <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium bg-green-900/50 text-green-300">
            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
            </svg>
            Verified E2E
          </span>
        </div>
      </div>
      <div data-secure-terminal-target="terminal" class="terminal-container h-[calc(100vh-350px)] min-h-[300px] overflow-hidden bg-[#1e1e1e] w-full"></div>
    </div>
  </div>

  <%# Key Verification Panel %>
  <div data-secure-terminal-target="keyVerifyPanel" class="hidden mt-4 bg-gray-50 border border-gray-200 rounded-lg p-4">
    <h3 class="text-sm font-medium text-gray-900 mb-2">Key Verification</h3>
    <p class="text-xs text-gray-600 mb-2">
      Verify this fingerprint matches what's shown on your CLI to confirm no tampering:
    </p>
    <div class="font-mono text-xs bg-white border rounded p-2 break-all" data-secure-terminal-target="keyFingerprint">
      Loading...
    </div>
  </div>

  <%# Touch Controls (mobile) %>
  <div class="mt-4 lg:hidden" data-secure-terminal-target="touchControls">
    <div class="bg-white shadow rounded-lg p-4 hidden">
      <h3 class="text-sm font-medium text-gray-900 mb-3">Special Keys</h3>
      <div class="grid grid-cols-4 gap-2">
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="secure-terminal#sendCtrlC">Ctrl+C</button>
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="secure-terminal#sendEnter">Enter</button>
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="secure-terminal#sendEscape">Esc</button>
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="secure-terminal#sendTab">Tab</button>
      </div>
      <div class="grid grid-cols-4 gap-2 mt-2">
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="secure-terminal#sendArrowUp">↑</button>
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="secure-terminal#sendArrowDown">↓</button>
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="secure-terminal#sendArrowLeft">←</button>
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="secure-terminal#sendArrowRight">→</button>
      </div>
    </div>
  </div>
</div>
