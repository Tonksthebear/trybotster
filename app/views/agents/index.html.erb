<% content_for :head do %>
  <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/@xterm/xterm@5.5.0/css/xterm.min.css" %>
<% end %>

<div class="w-full max-w-7xl mx-auto px-2 lg:px-6"
     data-controller="webrtc"
     data-webrtc-csrf-token-value="<%= form_authenticity_token %>"
     data-webrtc-mode-value="gui"
     data-webrtc-ice-servers-value="<%= @ice_servers.to_json %>">

  <%# Header %>
  <div class="mb-4">
    <h1 class="text-2xl font-bold text-gray-900">Botster Hub Remote</h1>
    <p class="mt-1 text-sm text-gray-600">
      Manage your Botster agents via P2P connection.
    </p>
  </div>

  <%# Connection controls %>
  <div class="bg-white shadow rounded-lg mb-4">
    <div class="px-4 py-3 flex flex-wrap items-center justify-between gap-2">
      <div data-webrtc-target="status" class="text-sm text-gray-500">
        Not connected
      </div>
      <div class="flex items-center gap-2">
        <button type="button"
                data-webrtc-target="modeToggle"
                data-action="webrtc#toggleMode"
                class="inline-flex items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
          Switch to TUI
        </button>
        <button type="button"
                data-webrtc-target="connectButton"
                data-action="webrtc#startConnection"
                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700">
          Connect to Hub
        </button>
      </div>
    </div>
  </div>

  <%# Main content area %>
  <div class="grid grid-cols-1 lg:grid-cols-4 gap-4">
    <%# Agent List Panel (GUI mode only) - compact on mobile %>
    <div data-webrtc-target="guiContainer" class="lg:col-span-1 space-y-2 lg:space-y-4">
      <%# Agent List with inline actions on mobile %>
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-3 py-2 lg:px-4 lg:py-3 border-b border-gray-200 bg-gray-50 flex items-center justify-between">
          <h2 class="text-sm font-medium text-gray-900">Agents</h2>
          <div class="flex items-center gap-2">
            <%# Inline action buttons on mobile %>
            <button type="button"
                    data-action="webrtc#showNewAgentModal"
                    class="lg:hidden p-1.5 text-blue-600 hover:bg-blue-50 rounded"
                    data-webrtc-target="newAgentButton"
                    title="New Agent">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
            </button>
            <button type="button"
                    data-action="webrtc#showCloseAgentModal"
                    class="lg:hidden p-1.5 text-gray-500 hover:bg-gray-100 rounded"
                    data-webrtc-target="closeAgentButton"
                    title="Close Agent">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
            <button type="button"
                    class="p-1.5 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded"
                    data-action="webrtc#requestAgentList"
                    title="Refresh">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
            </button>
          </div>
        </div>
        <div data-webrtc-target="agentList" class="agent-list-container max-h-[100px] lg:max-h-[calc(100vh-400px)] overflow-y-auto">
          <div class="text-gray-500 text-center py-4 lg:py-8">
            <p class="text-sm">Connect to hub to see agents</p>
          </div>
        </div>
      </div>

      <%# Agent Actions - hidden on mobile, shown on desktop %>
      <div class="hidden lg:block bg-white shadow rounded-lg p-4">
        <h3 class="text-sm font-medium text-gray-900 mb-3">Actions</h3>
        <div class="space-y-2">
          <button type="button"
                  data-action="webrtc#showNewAgentModal"
                  class="w-full inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 disabled:opacity-50">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            New Agent
          </button>
          <button type="button"
                  data-action="webrtc#showCloseAgentModal"
                  class="w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 disabled:opacity-50">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            Close Agent
          </button>
        </div>
      </div>
    </div>

    <%# Terminal Panel %>
    <div data-webrtc-target="tuiContainer" class="lg:col-span-3">
      <div class="shadow lg:rounded-lg overflow-hidden bg-[#1e1e1e]">
        <div class="px-2 py-1.5 lg:px-3 lg:py-2 border-b border-gray-700 flex items-center justify-between bg-[#2d2d2d]">
          <h2 class="text-xs lg:text-sm font-medium text-gray-300" data-webrtc-target="terminalTitle">Terminal</h2>
          <span class="text-xs text-gray-500" data-webrtc-target="selectedAgentLabel">No agent selected</span>
        </div>
        <div data-webrtc-target="terminal" class="terminal-container h-[calc(100vh-380px)] min-h-[250px] lg:h-[calc(100vh-280px)] lg:min-h-[300px] overflow-hidden bg-[#1e1e1e] w-full"></div>
      </div>
    </div>
  </div>

  <%# Touch Controls (mobile) - Special keys not available on mobile keyboard %>
  <div class="mt-4 lg:hidden touch-controls-container">
    <div class="bg-white shadow rounded-lg p-4">
      <h3 class="text-sm font-medium text-gray-900 mb-3">Special Keys</h3>
      <div class="grid grid-cols-4 gap-2 mb-3">
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="webrtc#sendCtrlC">Ctrl+C</button>
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="webrtc#sendEnter">Enter</button>
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="webrtc#sendEscape">Esc</button>
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="webrtc#sendTab">Tab</button>
      </div>
      <div class="grid grid-cols-4 gap-2">
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="webrtc#sendArrowUp">
          <svg class="w-4 h-4 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" /></svg>
        </button>
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="webrtc#sendArrowDown">
          <svg class="w-4 h-4 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
        </button>
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="webrtc#sendArrowLeft">
          <svg class="w-4 h-4 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
        </button>
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="webrtc#sendArrowRight">
          <svg class="w-4 h-4 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </button>
      </div>
    </div>
  </div>

  <%# New Agent Modal %>
  <div data-controller="modal" data-webrtc-target="newAgentModal" class="fixed inset-0 z-50 hidden" aria-modal="true">
    <div class="fixed inset-0 bg-black/50" data-action="modal#hide"></div>
    <div class="fixed inset-0 flex items-center justify-center p-4 pointer-events-none">
      <div class="bg-white rounded-lg shadow-xl max-w-md w-full p-6 relative max-h-[90vh] overflow-y-auto pointer-events-auto">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Create New Agent</h3>

        <%# Existing Worktrees Section %>
        <div class="mb-6">
          <label class="block text-sm font-medium text-gray-700 mb-2">Reopen Existing Worktree</label>
          <div data-webrtc-target="worktreeList" class="max-h-40 overflow-y-auto">
            <p class="text-sm text-gray-500 py-2">Loading worktrees...</p>
          </div>
        </div>

        <div class="border-t border-gray-200 pt-4 mb-4">
          <p class="text-sm text-gray-500 text-center">Or create a new agent</p>
        </div>

        <%# New Agent Form %>
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Issue Number or Branch Name</label>
            <input type="text"
                   data-webrtc-target="issueOrBranch"
                   placeholder="123 or feature-branch"
                   pattern="^[a-zA-Z0-9][\w\-./]*$"
                   title="Use letters, numbers, dashes, underscores. No spaces or special characters."
                   required
                   class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm invalid:border-red-500">
            <p class="mt-1 text-xs text-gray-500">Enter a GitHub issue number or a branch name (no spaces)</p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Initial Prompt (optional)</label>
            <textarea
                   data-webrtc-target="agentPrompt"
                   rows="3"
                   placeholder="Additional context or instructions for the agent..."
                   class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"></textarea>
          </div>
        </div>

        <div class="mt-6 flex justify-end gap-3">
          <button type="button"
                  data-action="modal#hide"
                  class="px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
            Cancel
          </button>
          <button type="button"
                  data-action="webrtc#submitNewAgent"
                  class="px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
            Create Agent
          </button>
        </div>
      </div>
    </div>
  </div>

  <%# Close Agent Modal %>
  <div data-controller="modal" data-webrtc-target="closeAgentModal" class="fixed inset-0 z-50 hidden" aria-modal="true">
    <div class="fixed inset-0 bg-black/50" data-action="modal#hide"></div>
    <div class="fixed inset-0 flex items-center justify-center p-4 pointer-events-none">
      <div class="bg-white rounded-lg shadow-xl max-w-md w-full p-6 relative pointer-events-auto">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Close Agent</h3>
        <p class="text-sm text-gray-600 mb-4">
          Are you sure you want to close the selected agent?
        </p>
        <p class="text-sm text-gray-600 mb-4" data-webrtc-target="closeAgentName">
          No agent selected
        </p>
        <div class="mt-6 flex flex-col sm:flex-row justify-end gap-3">
          <button type="button"
                  data-action="modal#hide"
                  class="px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
            Cancel
          </button>
          <button type="button"
                  data-action="webrtc#closeAgentKeepWorktree"
                  class="px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-yellow-600 hover:bg-yellow-700">
            Close (Keep Worktree)
          </button>
          <button type="button"
                  data-action="webrtc#closeAgentDeleteWorktree"
                  class="px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700">
            Close & Delete Worktree
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
