<% content_for :head do %>
  <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/@xterm/xterm@5.5.0/css/xterm.min.css" %>
<% end %>

<div class="w-full max-w-7xl mx-auto px-2 lg:px-6"
     data-controller="terminal"
     data-terminal-csrf-token-value="<%= form_authenticity_token %>"
     data-terminal-browser-device-id-value="<%= @browser_device&.id %>"
     data-terminal-auto-connect-hub-value="<%= @auto_connect_hub %>"
     data-terminal-mode-value="gui">

  <%# Header %>
  <div class="mb-4">
    <h1 class="text-2xl font-bold text-gray-900">Botster Hub Remote</h1>
    <p class="mt-1 text-sm text-gray-600">
      Manage your Botster agents via E2E encrypted connection.
    </p>
  </div>

  <%# Security Mode Notice %>
  <% if current_user.server_assisted_pairing? %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-3 mb-4">
      <div class="flex items-start">
        <svg class="w-5 h-5 text-yellow-600 mt-0.5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <div class="flex-1">
          <p class="text-sm text-yellow-800">
            <strong>Convenience Mode Active</strong> - You can click hubs to connect directly.
            For maximum security, <%= link_to "scan the QR code instead", "#", class: "underline" %>.
          </p>
        </div>
      </div>
    </div>
  <% else %>
    <div class="bg-green-50 border border-green-200 rounded-lg p-3 mb-4">
      <div class="flex items-start">
        <svg class="w-5 h-5 text-green-600 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
        </svg>
        <div class="flex-1">
          <p class="text-sm text-green-800">
            <strong>Secure Mode Active (MITM-Proof)</strong> - Scan the QR code from your CLI to connect.
            Key exchange bypasses the server entirely.
          </p>
          <p class="text-xs text-green-700 mt-1">
            Press <kbd class="px-1 bg-green-100 rounded">m</kbd> in your CLI to show the connection QR code.
          </p>
        </div>
      </div>
    </div>
  <% end %>

  <%# Connection controls %>
  <div class="bg-white shadow rounded-lg mb-4">
    <div class="px-4 py-3 flex flex-wrap items-center justify-between gap-2">
      <div data-terminal-target="status" class="text-sm text-gray-500">
        Not connected
      </div>
      <div class="flex items-center gap-2">
        <button type="button"
                data-terminal-target="modeToggle"
                data-action="terminal#toggleMode"
                class="inline-flex items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
          Switch to TUI
        </button>
        <button type="button"
                data-action="terminal#disconnectHub"
                data-terminal-target="disconnectButton"
                class="hidden inline-flex items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
          Disconnect
        </button>
      </div>
    </div>
  </div>

  <%# Code Input Panel (shown when secure mode requires manual code entry) %>
  <div data-terminal-target="codeInputPanel" class="bg-white shadow rounded-lg mb-4 hidden">
    <div class="px-4 py-3">
      <div class="flex items-start gap-3">
        <svg class="w-6 h-6 text-blue-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
        </svg>
        <div class="flex-1">
          <h3 class="text-sm font-medium text-gray-900">Secure Connection Required</h3>
          <p class="text-sm text-gray-600 mt-1">
            For MITM-proof encryption, paste the connection URL from your CLI.
            Press <kbd class="px-1.5 py-0.5 bg-gray-100 rounded text-xs font-mono">m</kbd> in your CLI to show the QR code, then copy the URL below it.
          </p>
          <div class="mt-3 flex gap-2">
            <input type="text"
                   data-terminal-target="codeInput"
                   data-action="keydown.enter->terminal#connectWithCode"
                   placeholder="Paste URL here (e.g., https://...#key=...&hub=...)"
                   class="flex-1 px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 font-mono">
            <button type="button"
                    data-action="terminal#connectWithCode"
                    class="px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
              Connect
            </button>
            <button type="button"
                    data-action="terminal#hideCodeInput"
                    class="px-3 py-2 border border-gray-300 text-gray-700 text-sm rounded-md hover:bg-gray-50">
              Cancel
            </button>
          </div>
          <p data-terminal-target="codeError" class="text-sm text-red-600 mt-2 hidden"></p>
        </div>
      </div>
    </div>
  </div>

  <%# Main content area %>
  <div class="grid grid-cols-1 lg:grid-cols-4 gap-4">
    <%# Agent List Panel (GUI mode only) - compact on mobile %>
    <div data-terminal-target="guiContainer" class="lg:col-span-1 space-y-2 lg:space-y-4">
      <%# Hub List (shown when not connected) %>
      <div data-terminal-target="hubListPanel" class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-3 py-2 lg:px-4 lg:py-3 border-b border-gray-200 bg-gray-50 flex items-center justify-between">
          <h2 class="text-sm font-medium text-gray-900">Active Hubs</h2>
          <span class="text-xs text-gray-500"><%= @hubs.count %> online</span>
        </div>
        <div data-terminal-target="hubList" class="max-h-[200px] lg:max-h-[calc(100vh-400px)] overflow-y-auto">
          <% if @hubs.any? %>
            <% @hubs.each do |hub| %>
              <button type="button"
                      data-action="terminal#connectToHub"
                      data-hub-identifier="<%= hub.identifier %>"
                      class="w-full px-3 py-2 text-left hover:bg-gray-50 border-b border-gray-100 last:border-0">
                <div class="flex items-center justify-between">
                  <div>
                    <div class="text-sm font-medium text-gray-900 truncate">
                      <%= hub.identifier.truncate(20) %>
                    </div>
                    <div class="text-xs text-gray-500">
                      <%= hub.repo || "No repo" %>
                    </div>
                  </div>
                  <div class="flex items-center gap-2">
                    <% if hub.e2e_enabled? %>
                      <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800" title="E2E Encryption Active">
                        <svg class="w-3 h-3 mr-0.5" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
                        </svg>
                        E2E
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800" title="No E2E Encryption">
                        No E2E
                      </span>
                    <% end %>
                    <span class="text-xs text-gray-400">
                      <%= hub.hub_agents.count %> agents
                    </span>
                  </div>
                </div>
                <% if hub.device %>
                  <div class="text-xs text-gray-400 mt-1 font-mono">
                    <%= hub.device.fingerprint %>
                  </div>
                <% end %>
              </button>
            <% end %>
          <% else %>
            <div class="text-gray-500 text-center py-4 lg:py-8">
              <p class="text-sm">No active hubs</p>
              <p class="text-xs mt-1">Start a CLI session to connect</p>
            </div>
          <% end %>
        </div>
      </div>

      <%# Agent List (shown when connected) %>
      <div data-terminal-target="agentListPanel" class="bg-white shadow rounded-lg overflow-hidden hidden">
        <div class="px-3 py-2 lg:px-4 lg:py-3 border-b border-gray-200 bg-gray-50 flex items-center justify-between">
          <h2 class="text-sm font-medium text-gray-900">Agents</h2>
          <div class="flex items-center gap-2">
            <%# Inline action buttons on mobile %>
            <button type="button"
                    data-action="terminal#showNewAgentModal"
                    class="lg:hidden p-1.5 text-blue-600 hover:bg-blue-50 rounded"
                    title="New Agent">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
            </button>
            <button type="button"
                    data-action="terminal#showCloseAgentModal"
                    class="lg:hidden p-1.5 text-gray-500 hover:bg-gray-100 rounded"
                    title="Close Agent">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
            <button type="button"
                    class="p-1.5 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded"
                    data-action="terminal#requestAgentList"
                    title="Refresh">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
            </button>
          </div>
        </div>
        <div data-terminal-target="agentList" class="agent-list-container max-h-[100px] lg:max-h-[calc(100vh-400px)] overflow-y-auto">
          <div class="text-gray-500 text-center py-4 lg:py-8">
            <p class="text-sm">Connect to hub to see agents</p>
          </div>
        </div>
      </div>

      <%# Agent Actions - hidden on mobile, shown on desktop %>
      <div data-terminal-target="agentActionsPanel" class="hidden lg:block bg-white shadow rounded-lg p-4 hidden">
        <h3 class="text-sm font-medium text-gray-900 mb-3">Actions</h3>
        <div class="space-y-2">
          <button type="button"
                  data-action="terminal#showNewAgentModal"
                  class="w-full inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 disabled:opacity-50">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            New Agent
          </button>
          <button type="button"
                  data-action="terminal#showCloseAgentModal"
                  class="w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 disabled:opacity-50">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            Close Agent
          </button>
        </div>

        <h3 class="text-sm font-medium text-gray-900 mb-3 mt-4">Debug</h3>
        <div class="space-y-2">
          <button type="button"
                  data-action="terminal#clearTunnelCache"
                  class="w-full inline-flex items-center justify-center px-4 py-2 border border-orange-300 text-sm font-medium rounded-md text-orange-700 bg-orange-50 hover:bg-orange-100 disabled:opacity-50"
                  title="Clears service worker and cookie for the selected agent's tunnel preview">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            Clear Tunnel Cache
          </button>
        </div>
      </div>

      <%# Browser Device Info %>
      <div class="bg-white shadow rounded-lg p-4">
        <h3 class="text-sm font-medium text-gray-900 mb-2">Your Browser Device</h3>
        <% if @browser_device %>
          <div class="text-xs text-gray-600 space-y-1">
            <div><span class="text-gray-500">Name:</span> <%= @browser_device.name %></div>
            <div class="font-mono"><span class="text-gray-500">ID:</span> <%= @browser_device.fingerprint %></div>
          </div>
        <% else %>
          <p class="text-xs text-gray-500">Device will be registered on first connection</p>
        <% end %>
      </div>
    </div>

    <%# Terminal Panel %>
    <div data-terminal-target="tuiContainer" class="lg:col-span-3">
      <div class="shadow lg:rounded-lg overflow-hidden bg-[#1e1e1e]">
        <div class="px-2 py-1.5 lg:px-3 lg:py-2 border-b border-gray-700 flex items-center justify-between bg-[#2d2d2d]">
          <div class="flex items-center gap-2">
            <h2 class="text-xs lg:text-sm font-medium text-gray-300" data-terminal-target="terminalTitle">Terminal</h2>
            <%# PTY Toggle Button - toggles between CLI and Server view %>
            <button type="button"
                    data-terminal-target="ptyToggle"
                    data-action="terminal#togglePtyView"
                    class="hidden inline-flex items-center px-2 py-1 text-xs font-medium rounded bg-gray-600 text-gray-300 hover:bg-gray-500"
                    title="Toggle between CLI and Server terminal">
              <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
              </svg>
              <span class="hidden sm:inline">Toggle View</span>
            </button>
            <%# Return to Live button - shows when scrolled %>
            <button type="button"
                    data-terminal-target="scrollToLive"
                    data-action="terminal#scrollToBottom"
                    class="hidden inline-flex items-center px-2 py-1 text-xs font-medium rounded bg-yellow-600 text-white hover:bg-yellow-500"
                    title="Return to live view (scroll to bottom)">
              <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 13l-7 7-7-7m14-8l-7 7-7-7" />
              </svg>
              <span class="hidden sm:inline">Live</span>
            </button>
          </div>
          <div class="flex items-center gap-2">
            <span class="text-xs text-gray-400 hidden sm:inline">Scroll: mouse wheel</span>
            <span class="text-xs text-gray-500" data-terminal-target="selectedAgentLabel">No agent selected</span>
            <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium bg-blue-900/50 text-blue-300">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
              </svg>
              E2E
            </span>
          </div>
        </div>
        <div data-terminal-target="terminal" class="terminal-container h-[calc(100vh-380px)] min-h-[250px] lg:h-[calc(100vh-280px)] lg:min-h-[300px] overflow-hidden bg-[#1e1e1e] w-full"></div>
      </div>
    </div>
  </div>

  <%# Touch Controls (mobile) - Special keys not available on mobile keyboard %>
  <div class="mt-4 lg:hidden touch-controls-container">
    <div class="bg-white shadow rounded-lg p-4">
      <h3 class="text-sm font-medium text-gray-900 mb-3">Special Keys</h3>
      <div class="grid grid-cols-4 gap-2 mb-3">
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="terminal#sendCtrlC">Ctrl+C</button>
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="terminal#sendEnter">Enter</button>
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="terminal#sendEscape">Esc</button>
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="terminal#sendTab">Tab</button>
      </div>
      <div class="grid grid-cols-4 gap-2 mb-3">
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="terminal#sendArrowUp">
          <svg class="w-4 h-4 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" /></svg>
        </button>
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="terminal#sendArrowDown">
          <svg class="w-4 h-4 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
        </button>
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="terminal#sendArrowLeft">
          <svg class="w-4 h-4 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
        </button>
        <button type="button" class="px-3 py-3 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50 active:bg-gray-100" data-action="terminal#sendArrowRight">
          <svg class="w-4 h-4 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </button>
      </div>

      <%# View Controls - just toggle and live %>
      <h3 class="text-sm font-medium text-gray-900 mb-3 mt-4">View Controls</h3>
      <div class="grid grid-cols-2 gap-2">
        <button type="button" class="px-3 py-3 border border-purple-300 text-sm rounded-md text-purple-700 bg-purple-50 hover:bg-purple-100 active:bg-purple-200 flex items-center justify-center gap-2" data-action="terminal#togglePtyView" title="Toggle CLI/Server">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" /></svg>
          Toggle View
        </button>
        <button type="button" class="px-3 py-3 border border-yellow-300 text-sm rounded-md text-yellow-700 bg-yellow-50 hover:bg-yellow-100 active:bg-yellow-200 flex items-center justify-center gap-2" data-action="terminal#scrollToBottom" title="Return to live view">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 13l-7 7-7-7m14-8l-7 7-7-7" /></svg>
          Live
        </button>
      </div>
    </div>
  </div>

  <%# New Agent Modal %>
  <div data-controller="modal" data-terminal-target="newAgentModal" class="fixed inset-0 z-50 hidden" aria-modal="true">
    <div class="fixed inset-0 bg-black/50" data-action="modal#hide"></div>
    <div class="fixed inset-0 flex items-center justify-center p-4 pointer-events-none">
      <div class="bg-white rounded-lg shadow-xl max-w-md w-full p-6 relative max-h-[90vh] overflow-y-auto pointer-events-auto">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Create New Agent</h3>

        <%# Shared Prompt Field - appears first %>
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 mb-1">Initial Prompt (optional)</label>
          <textarea
                 data-terminal-target="agentPrompt"
                 rows="2"
                 placeholder="Enter a prompt, then choose an option below..."
                 class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"></textarea>
          <p class="mt-1 text-xs text-gray-500">Leave blank for default prompt, or type custom instructions</p>
        </div>

        <div class="border-t border-gray-200 pt-4 mb-4">
          <p class="text-sm text-gray-500 text-center font-medium">Choose an option</p>
        </div>

        <%# Existing Worktrees Section %>
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 mb-2">Reopen Existing Worktree</label>
          <div data-terminal-target="worktreeList" class="max-h-32 overflow-y-auto border border-gray-200 rounded-md">
            <p class="text-sm text-gray-500 py-2 px-3">Loading worktrees...</p>
          </div>
        </div>

        <div class="border-t border-gray-200 pt-4 mb-4">
          <p class="text-xs text-gray-400 text-center">— or —</p>
        </div>

        <%# New Agent Form %>
        <div class="space-y-3">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Create New from Issue/Branch</label>
            <div class="flex gap-2">
              <input type="text"
                     data-terminal-target="issueOrBranch"
                     placeholder="123 or feature-branch"
                     pattern="^[a-zA-Z0-9][\w\-./]*$"
                     title="Use letters, numbers, dashes, underscores. No spaces or special characters."
                     class="flex-1 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm invalid:border-red-500">
              <button type="button"
                      data-action="terminal#submitNewAgent"
                      class="px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                Create
              </button>
            </div>
            <p class="mt-1 text-xs text-gray-500">Enter a GitHub issue number or branch name</p>
          </div>
        </div>

        <div class="mt-6 flex justify-end">
          <button type="button"
                  data-action="modal#hide"
                  class="px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
            Cancel
          </button>
        </div>
      </div>
    </div>
  </div>

  <%# Close Agent Modal %>
