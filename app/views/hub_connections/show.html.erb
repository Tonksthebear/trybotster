<% content_for :head do %>
  <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/@xterm/xterm@5.5.0/css/xterm.min.css" %>
<% end %>

<div class="min-h-[calc(100vh-8rem)]"
     data-controller="secure-terminal"
     data-secure-terminal-csrf-token-value="<%= form_authenticity_token %>"
     data-secure-terminal-browser-device-id-value="<%= @browser_device&.id %>">

  <%# Header %>
  <div class="border-b border-zinc-800 bg-zinc-900/50">
    <div class="max-w-7xl mx-auto px-4 py-4">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-2xl font-bold text-zinc-100">Secure E2E Connection</h1>
          <p class="text-sm text-zinc-500 mt-1">
            End-to-end encrypted terminal with MITM-proof key exchange
          </p>
        </div>
        <div class="flex items-center gap-3">
          <div data-secure-terminal-target="status" class="text-sm font-mono text-zinc-500">
            Reading secure key...
          </div>
          <button type="button"
                  data-action="secure-terminal#disconnect"
                  data-secure-terminal-target="disconnectBtn"
                  class="hidden px-3 py-1.5 text-sm font-medium text-zinc-400 hover:text-zinc-200 border border-zinc-700 hover:border-zinc-600 rounded transition-colors">
            Disconnect
          </button>
        </div>
      </div>
    </div>
  </div>

  <%# Security Notice %>
  <div class="border-b border-emerald-500/20 bg-emerald-500/5">
    <div class="max-w-7xl mx-auto px-4 py-3">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-emerald-400 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
        </svg>
        <div>
          <h3 class="text-sm font-medium text-emerald-300">MITM-Proof Key Exchange</h3>
          <p class="text-sm text-emerald-200/70 mt-1">
            The CLI's public key is transmitted via URL fragment (<code class="text-emerald-300">#key=...</code>), which is
            <strong>never sent to the server</strong>. Even a compromised server cannot intercept your connection.
          </p>
        </div>
      </div>
    </div>
  </div>

  <%# Error State %>
  <div data-secure-terminal-target="errorPanel" class="hidden">
    <div class="max-w-2xl mx-auto px-4 py-12">
      <div class="bg-red-500/10 border border-red-500/20 rounded-lg p-6">
        <div class="flex items-start gap-4">
          <svg class="w-6 h-6 text-red-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          <div>
            <h3 class="text-lg font-semibold text-red-300">No Secure Key Found</h3>
            <p class="text-sm text-red-200/70 mt-2">
              This page requires a secure connection URL from the CLI. Scan the QR code displayed in your Botster CLI or use the full URL with the key fragment.
            </p>
            <p class="text-sm text-red-200/50 mt-3 font-mono">
              Expected: <code class="bg-red-500/10 px-1.5 py-0.5 rounded">/hub_connection#key=...&hub=...</code>
            </p>
            <a href="<%= hubs_path %>" class="inline-flex items-center gap-2 mt-4 text-sm text-red-300 hover:text-red-200 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
              Go to hubs dashboard
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# Terminal Panel %>
  <div data-secure-terminal-target="terminalPanel" class="hidden">
    <div class="max-w-7xl mx-auto px-4 py-6">
      <div class="bg-zinc-950 border border-zinc-800 rounded-lg overflow-hidden">
        <%# Terminal header %>
        <div class="px-4 py-2 border-b border-zinc-800 flex items-center justify-between bg-zinc-900">
          <div class="flex items-center gap-3">
            <div class="flex items-center gap-1.5">
              <span class="w-3 h-3 rounded-full bg-red-500/80"></span>
              <span class="w-3 h-3 rounded-full bg-yellow-500/80"></span>
              <span class="w-3 h-3 rounded-full bg-green-500/80"></span>
            </div>
            <span class="text-sm font-mono text-zinc-400">Secure Terminal</span>
            <span class="text-xs text-zinc-600" data-secure-terminal-target="hubInfo">Connecting...</span>
          </div>
          <span class="inline-flex items-center gap-1 px-2 py-0.5 text-xs font-medium bg-emerald-500/10 text-emerald-400 rounded">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
            </svg>
            Verified E2E
          </span>
        </div>
        <%# Terminal content %>
        <div data-secure-terminal-target="terminal" class="h-[calc(100vh-20rem)] min-h-[300px] bg-zinc-950"></div>
      </div>

      <%# Key Verification %>
      <div data-secure-terminal-target="keyVerifyPanel" class="hidden mt-4 bg-zinc-900 border border-zinc-800 rounded-lg p-4">
        <h3 class="text-sm font-medium text-zinc-300 mb-2">Key Verification</h3>
        <p class="text-xs text-zinc-500 mb-3">
          Verify this fingerprint matches your CLI to confirm no tampering:
        </p>
        <div class="font-mono text-xs bg-zinc-950 border border-zinc-700 rounded p-3 text-cyan-400 break-all" data-secure-terminal-target="keyFingerprint">
          Loading...
        </div>
      </div>
    </div>
  </div>

  <%# Mobile Touch Controls %>
  <div class="lg:hidden" data-secure-terminal-target="touchControls">
    <div class="hidden border-t border-zinc-800 bg-zinc-900/50 p-4">
      <div class="grid grid-cols-4 gap-2 mb-3">
        <button type="button" class="px-3 py-3 bg-zinc-800 hover:bg-zinc-700 text-zinc-300 text-sm font-mono rounded transition-colors" data-action="secure-terminal#sendCtrlC">^C</button>
        <button type="button" class="px-3 py-3 bg-zinc-800 hover:bg-zinc-700 text-zinc-300 text-sm rounded transition-colors" data-action="secure-terminal#sendEnter">Enter</button>
        <button type="button" class="px-3 py-3 bg-zinc-800 hover:bg-zinc-700 text-zinc-300 text-sm rounded transition-colors" data-action="secure-terminal#sendEscape">Esc</button>
        <button type="button" class="px-3 py-3 bg-zinc-800 hover:bg-zinc-700 text-zinc-300 text-sm rounded transition-colors" data-action="secure-terminal#sendTab">Tab</button>
      </div>
      <div class="grid grid-cols-4 gap-2">
        <button type="button" class="px-3 py-3 bg-zinc-800 hover:bg-zinc-700 text-zinc-300 rounded transition-colors" data-action="secure-terminal#sendArrowUp">
          <svg class="w-4 h-4 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" /></svg>
        </button>
        <button type="button" class="px-3 py-3 bg-zinc-800 hover:bg-zinc-700 text-zinc-300 rounded transition-colors" data-action="secure-terminal#sendArrowDown">
          <svg class="w-4 h-4 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
        </button>
        <button type="button" class="px-3 py-3 bg-zinc-800 hover:bg-zinc-700 text-zinc-300 rounded transition-colors" data-action="secure-terminal#sendArrowLeft">
          <svg class="w-4 h-4 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
        </button>
        <button type="button" class="px-3 py-3 bg-zinc-800 hover:bg-zinc-700 text-zinc-300 rounded transition-colors" data-action="secure-terminal#sendArrowRight">
          <svg class="w-4 h-4 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </button>
      </div>
    </div>
  </div>
</div>
