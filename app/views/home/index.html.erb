<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="mx-auto">
    <% if user_signed_in? %>
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="bg-green-600 px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-white">Welcome, <%= @user_data[:username] %>!</h3>
          <p class="mt-1 max-w-2xl text-green-100">You're signed in with GitHub. Here's your API token for MCP client.</p>
        </div>
        <div class="p-6">
          <label for="api-token" class="block text-sm font-medium text-gray-700 mb-2">API Token</label>
          <div class="relative">
            <input type="text" id="api-token" value="<%= @api_key %>" readonly
                   class="w-full pr-10 pl-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500 bg-gray-50 text-sm font-mono text-gray-900"
                   style="word-break: break-all;">
            <button type="button" onclick="copyToken()"
                    class="absolute inset-y-0 right-0 pr-3 flex items-center text-green-600 hover:text-green-900">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>
            </button>
          </div>

          <p class="mt-6 text-xs text-gray-500">For a VSCode setup, add an HTTP MCP server and then use the following config:</p>
          <pre class="mt-2 text-xs bg-gray-100 p-3 rounded overflow-x-auto">
{
  "inputs": [
    {
      "type": "promptString",
      "id": "api-key",
      "description": "API Key for MCP Server",
      "password": true
    }
  ],
  "servers": {
    "llmMemories": {
      "type": "http",
      "url": "https://mcp.brinkstermeister.com",
      "headers": {
        "MCP-Protocol-Version": "2025-06-18",
        "Authorization": "Bearer ${input:api-key}"
      }
    }
  }
}
          </pre>
          <div class="mt-6">
            <%= link_to "Logout", destroy_user_session_path,
                        method: :delete,
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                        class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Sign in with GitHub</h3>
          <p class="text-sm text-gray-600 mb-4">
            Authorize the GitHub App to sign in and enable GitHub features (repos, issues, PRs).
          </p>
          <%= link_to github_app_authorize_path,
                      data: { turbo: false },
                      class: "w-full inline-flex justify-center items-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gray-900 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" do %>
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"/>
            </svg>
            Sign in with GitHub
          <% end %>
          <p class="mt-3 text-xs text-gray-500 text-center">
            This will sign you in and grant access to GitHub features
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  function copyToken() {
    const tokenInput = document.getElementById('api-token');
    tokenInput.select();
    tokenInput.setSelectionRange(0, 99999);
    navigator.clipboard.writeText(tokenInput.value).then(() => {
      const svg = tokenInput.nextElementSibling;
      const checkmark = '<svg class="h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>';
      const original = svg.innerHTML;
      svg.innerHTML = checkmark;
      setTimeout(() => { svg.innerHTML = original; }, 2000);
    }).catch(err => {
      console.error('Failed to copy: ', err);
      document.execCommand('copy');
    });
  }
</script>
