<div class="h-full flex flex-col items-center justify-center p-8">
  <div class="max-w-md text-center">
    <% if flash[:hub_booting] %>
      <%# Success state after approving a device code %>
      <div class="inline-flex items-center justify-center size-16 bg-success-500/10 rounded-2xl mb-6">
        <svg class="size-8 text-success-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <h2 class="text-xl font-semibold text-zinc-200 mb-2">Hub Connected!</h2>
      <div class="flex items-center justify-center gap-2 text-sm text-zinc-400">
        <svg class="size-4 animate-spin text-primary-400" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Device booting...
      </div>
      <p class="text-xs text-zinc-600 mt-4">Your hub will appear in the sidebar momentarily.</p>
    <% elsif @hubs.any? %>
      <div class="inline-flex items-center justify-center size-16 bg-zinc-800/50 rounded-2xl mb-6">
        <svg class="size-8 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
      <h2 class="text-xl font-semibold text-zinc-200 mb-2">Select a Hub</h2>
      <p class="text-sm text-zinc-500 mb-6">
        Choose a hub from the sidebar to connect to its terminal.
      </p>
    <% else %>
      <div class="inline-flex items-center justify-center size-16 bg-zinc-800/50 rounded-2xl mb-6">
        <svg class="size-8 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
      <h2 class="text-xl font-semibold text-zinc-200 mb-2">No Active Hubs</h2>
      <p class="text-sm text-zinc-500 mb-6">
        Start the Botster CLI on your machine to create a hub.
      </p>
      <div class="bg-zinc-900 border border-zinc-800 rounded-lg p-4 mb-4">
        <code class="text-sm font-mono text-primary-400">botster</code>
        <p class="text-xs text-zinc-600 mt-2">Run this in your project directory</p>
      </div>
      <div class="flex flex-col items-center gap-3">
        <%= link_to doc_path(path: "getting-started/installation"), class: "inline-flex items-center gap-2 text-sm text-zinc-400 hover:text-zinc-200 transition-colors" do %>
          <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          View installation guide
        <% end %>
        <%= link_to new_users_hub_path, class: "inline-flex items-center gap-2 text-sm text-primary-400 hover:text-primary-300 transition-colors" do %>
          <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Connect with device code
        <% end %>
      </div>
    <% end %>
  </div>
</div>
