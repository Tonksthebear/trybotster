<div class="w-full max-w-4xl mx-auto px-4 lg:px-6 py-6">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Active Hubs</h1>
    <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
      CLI instances sending heartbeats. Updates in real-time.
    </p>
  </div>

  <%# Subscribe to Turbo Streams for live updates %>
  <%= turbo_stream_from "user_#{current_user.id}_hubs" %>

  <div id="hubs_list" class="bg-white dark:bg-gray-900 shadow rounded-lg p-4">
    <%= render "hubs/list", hubs: @hubs %>
  </div>
</div>
