<div class="h-full flex flex-col overflow-y-auto">
  <%# Ambient background %>
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute -top-1/4 -right-1/4 w-1/2 h-1/2 bg-[radial-gradient(ellipse_at_center,_var(--color-primary-500)_0%,_transparent_70%)] opacity-[0.03]"></div>
    <div class="absolute -bottom-1/4 -left-1/4 w-1/2 h-1/2 bg-[radial-gradient(ellipse_at_center,_var(--color-success-500)_0%,_transparent_70%)] opacity-[0.02]"></div>
  </div>

  <div class="relative flex-1 flex flex-col p-6 lg:p-10">
    <div class="w-full max-w-2xl mx-auto">

      <%# Header %>
      <div class="mb-10">
        <h1 class="text-2xl lg:text-3xl font-bold text-zinc-100 tracking-tight">Dashboard</h1>
        <p class="text-sm text-zinc-500 mt-1">Manage your connected hubs</p>
      </div>

      <% if flash[:hub_booting] %>
        <%# Boot success banner %>
        <div class="relative mb-8 rounded-xl border border-success-500/20 bg-success-500/5 px-5 py-4 overflow-hidden">
          <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_right,_var(--color-success-500)_0%,_transparent_70%)] opacity-[0.07]"></div>
          <div class="relative flex items-center gap-4">
            <div class="shrink-0 size-10 rounded-lg bg-success-500/15 flex items-center justify-center">
              <%= icon "check-circle", class: "size-5 text-success-400" %>
            </div>
            <div>
              <p class="text-sm font-medium text-success-300">Hub Connected</p>
              <p class="text-xs text-zinc-500 mt-0.5 flex items-center gap-1.5">
                <svg class="size-3 animate-spin text-success-400/60" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                Booting &mdash; will appear below momentarily
              </p>
            </div>
          </div>
        </div>
      <% end %>

      <% if @hubs.any? %>
        <%# Stats row %>
        <div class="grid grid-cols-2 gap-3 mb-8">
          <div class="rounded-lg border border-zinc-800/60 bg-zinc-900/30 px-4 py-3">
            <p class="text-2xl font-bold text-zinc-100 tabular-nums"><%= @hubs.size %></p>
            <p class="text-[11px] text-zinc-600 mt-0.5 uppercase tracking-wider">Total</p>
          </div>
          <div class="rounded-lg border border-zinc-800/60 bg-zinc-900/30 px-4 py-3">
            <p class="text-2xl font-bold text-success-400 tabular-nums"><%= @hubs.count(&:active?) %></p>
            <p class="text-[11px] text-zinc-600 mt-0.5 uppercase tracking-wider">Online</p>
          </div>
        </div>

        <%# Hub cards %>
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-xs font-medium text-zinc-500 uppercase tracking-wider">Hubs</h2>
          <%= link_to new_users_hub_path, class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-xs font-medium text-zinc-400 hover:text-primary-300 bg-zinc-800/50 hover:bg-zinc-800 border border-zinc-700/40 hover:border-zinc-700 rounded-lg transition-all", title: "Connect Hub" do %>
            <%= icon "plus", class: "size-3.5" %>
            <span>Add Hub</span>
          <% end %>
        </div>
        <div class="hubs-dashboard space-y-3">
          <%= render "hubs/index_hubs", hubs: @hubs %>
        </div>

      <% else %>
        <%# Empty state %>
        <div class="flex flex-col items-center text-center pt-8 lg:pt-16">
          <div class="relative mb-8">
            <div class="size-24 rounded-2xl bg-zinc-900/60 border border-zinc-800/60 flex items-center justify-center">
              <%= icon "command-line", class: "size-10 text-zinc-700" %>
            </div>
            <div class="absolute -inset-4 rounded-3xl bg-[radial-gradient(ellipse_at_center,_var(--color-primary-500)_0%,_transparent_70%)] opacity-[0.06] -z-10"></div>
          </div>

          <h2 class="text-xl font-semibold text-zinc-200 mb-2">No Active Hubs</h2>
          <p class="text-sm text-zinc-500 mb-8 max-w-sm">
            Start the Botster CLI in a project directory to create your first hub.
          </p>

          <div class="w-full max-w-xs rounded-xl border border-zinc-800/60 bg-zinc-900/40 overflow-hidden mb-8">
            <div class="flex items-center gap-2 px-4 py-2 border-b border-zinc-800/40">
              <span class="size-2 rounded-full bg-zinc-700"></span>
              <span class="size-2 rounded-full bg-zinc-700"></span>
              <span class="size-2 rounded-full bg-zinc-700"></span>
              <span class="flex-1 text-center text-[10px] text-zinc-700 font-mono">terminal</span>
            </div>
            <div class="px-4 py-3 font-mono text-sm">
              <span class="text-zinc-600">$</span>
              <span class="text-primary-400 ml-1.5">botster</span>
            </div>
          </div>

          <div class="flex items-center gap-5">
            <%= link_to doc_path(path: "getting-started/installation"), class: "inline-flex items-center gap-1.5 text-sm text-zinc-500 hover:text-zinc-300 transition-colors", target: "_blank" do %>
              <%= icon "book-open", class: "size-4" %>
              <span>Install guide</span>
            <% end %>
            <%= link_to new_users_hub_path, class: "inline-flex items-center gap-1.5 px-4 py-2 text-sm font-medium text-primary-50 bg-primary-600 hover:bg-primary-500 rounded-lg transition-colors" do %>
              <%= icon "plus", class: "size-4" %>
              <span>Connect device</span>
            <% end %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
