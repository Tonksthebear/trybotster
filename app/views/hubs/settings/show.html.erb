<div class="h-full flex flex-col overflow-hidden"
     data-controller="hub-settings"
     data-hub-settings-hub-id-value="<%= Current.hub.id %>"
     data-hub-settings-config-files-value="<%= @config_files.to_json %>">

  <%# Header %>
  <div class="shrink-0 border-b border-zinc-800 bg-zinc-900/50">
    <div class="px-4 py-4 lg:py-6">
      <div class="flex items-start justify-between gap-4">
        <div class="min-w-0 flex items-center gap-3">
          <%= link_to hub_path(Current.hub), class: "text-zinc-500 hover:text-zinc-300 transition-colors" do %>
            <%= icon "arrow-left", class: "size-5" %>
          <% end %>
          <div>
            <h1 class="text-xl lg:text-2xl font-bold text-zinc-100 font-mono">Settings</h1>
            <p class="text-sm text-zinc-500 mt-1 truncate">
              <%= Current.hub.device&.name || Current.hub.identifier.truncate(32) %>
            </p>
          </div>
        </div>
        <%= render "shared/connection_status", hub: Current.hub, connection_type: "hub" %>
      </div>
    </div>
  </div>

  <%# Content %>
  <div class="flex-1 overflow-y-auto">
    <div class="max-w-4xl mx-auto px-4 py-6 lg:py-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

        <%# File List (left) %>
        <div class="lg:col-span-1">
          <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-4">
            <h2 class="text-sm font-medium text-zinc-400 uppercase tracking-wider mb-4">Config Files</h2>

            <%# Loading state %>
            <div data-hub-settings-target="loading" class="py-4 text-center">
              <p class="text-sm text-zinc-500">Connecting to hub...</p>
            </div>

            <%# File list %>
            <div data-hub-settings-target="fileList" class="hidden space-y-2">
              <% @config_files.each do |file| %>
                <button type="button"
                        data-hub-settings-target="fileEntry"
                        data-file-name="<%= file[:name] %>"
                        data-action="hub-settings#selectFile"
                        class="w-full text-left px-3 py-2.5 rounded-lg border border-zinc-700/50 hover:border-zinc-700 hover:bg-zinc-800/50 transition-colors group">
                  <div class="flex items-center justify-between">
                    <div class="min-w-0">
                      <div class="text-sm font-mono text-zinc-200 truncate"><%= file[:name] %></div>
                      <div class="text-xs text-zinc-500 mt-0.5"><%= file[:description] %></div>
                    </div>
                    <span data-hub-settings-target="fileStatus"
                          data-file-name="<%= file[:name] %>"
                          class="shrink-0 ml-2 text-xs px-1.5 py-0.5 rounded">
                    </span>
                  </div>
                </button>
              <% end %>
            </div>
          </div>
        </div>

        <%# Editor (right) %>
        <div class="lg:col-span-2">
          <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg">
            <%# Editor header %>
            <div class="flex items-center justify-between px-4 py-3 border-b border-zinc-800">
              <div class="min-w-0">
                <span data-hub-settings-target="editorTitle" class="text-sm font-mono text-zinc-400">
                  Select a file
                </span>
              </div>
              <div class="flex items-center gap-2" data-hub-settings-target="editorActions">
                <button type="button"
                        data-hub-settings-target="revertBtn"
                        data-action="hub-settings#revert"
                        class="hidden px-3 py-1.5 text-xs font-medium text-zinc-400 hover:text-zinc-200 bg-zinc-800 hover:bg-zinc-700 rounded transition-colors">
                  Revert
                </button>
                <button type="button"
                        data-hub-settings-target="saveBtn"
                        data-action="hub-settings#save"
                        class="hidden px-3 py-1.5 text-xs font-medium text-emerald-400 hover:text-emerald-300 bg-emerald-500/10 hover:bg-emerald-500/20 border border-emerald-500/30 rounded transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
                        disabled>
                  Save
                </button>
                <button type="button"
                        data-hub-settings-target="createBtn"
                        data-action="hub-settings#createFile"
                        class="hidden px-3 py-1.5 text-xs font-medium text-primary-400 hover:text-primary-300 bg-primary-500/10 hover:bg-primary-500/20 border border-primary-500/30 rounded transition-colors">
                  Create
                </button>
                <button type="button"
                        data-hub-settings-target="deleteBtn"
                        data-action="hub-settings#deleteFile"
                        class="hidden px-3 py-1.5 text-xs font-medium text-red-400 hover:text-red-300 bg-red-500/10 hover:bg-red-500/20 border border-red-500/30 rounded transition-colors">
                  Delete
                </button>
              </div>
            </div>

            <%# Empty state %>
            <div data-hub-settings-target="editorEmpty" class="py-16 text-center">
              <%= icon "document-text", class: "size-12 text-zinc-700 mx-auto mb-4" %>
              <p class="text-sm text-zinc-500">Select a config file to edit</p>
            </div>

            <%# Loading state %>
            <div data-hub-settings-target="editorLoading" class="hidden py-16 text-center">
              <p class="text-sm text-zinc-500">Loading...</p>
            </div>

            <%# Textarea %>
            <div data-hub-settings-target="editorWrapper" class="hidden">
              <textarea data-hub-settings-target="editor"
                        data-action="input->hub-settings#onEditorInput"
                        class="w-full min-h-[400px] p-4 bg-transparent text-sm font-mono text-zinc-200 placeholder-zinc-600 border-0 focus:ring-0 focus:outline-none resize-y"
                        spellcheck="false"
                        placeholder="Empty file"></textarea>
            </div>

            <%# Error state %>
            <div data-hub-settings-target="editorError" class="hidden py-16 text-center">
              <p class="text-sm text-red-400" data-hub-settings-target="editorErrorMsg"></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
