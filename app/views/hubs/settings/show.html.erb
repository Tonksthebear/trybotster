<div class="h-full flex flex-col overflow-hidden"
     data-controller="hub-settings hub-templates"
     data-hub-settings-hub-id-value="<%= Current.hub.id %>"
     data-hub-settings-config-metadata-value="<%= @config_metadata.to_json %>"
     data-hub-templates-hub-id-value="<%= Current.hub.id %>"
     data-action="hub-templates:templateChanged->hub-settings#scanTree hub-settings:configChanged->hub-templates#recheckInstalled">

  <%# Header %>
  <div class="shrink-0 border-b border-zinc-800 bg-zinc-900/50">
    <div class="px-4 py-4 lg:py-6">
      <div class="flex items-start justify-between gap-4">
        <div class="min-w-0 flex items-center gap-3">
          <%= link_to hub_path(Current.hub), class: "text-zinc-500 hover:text-zinc-300 transition-colors" do %>
            <%= icon "arrow-left", class: "size-5" %>
          <% end %>
          <div>
            <h1 class="text-xl lg:text-2xl font-bold text-zinc-100 font-mono">Settings</h1>
            <p class="text-sm text-zinc-500 mt-1 truncate">
              <%= Current.hub.device&.name || Current.hub.identifier.truncate(32) %>
            </p>
          </div>
        </div>
        <%= render "shared/connection_status", hub: Current.hub, connection_type: "hub" %>
      </div>
    </div>

    <%# Tabs %>
    <div class="px-4 flex gap-1">
      <button type="button"
              data-tab="config"
              data-action="click->hub-settings#switchTab"
              class="px-4 py-2 text-sm font-medium transition-colors border-b-2
                     data-[active]:text-zinc-100 data-[active]:border-primary-500
                     text-zinc-500 border-transparent hover:text-zinc-300"
              data-active>
        Config
      </button>
      <button type="button"
              data-tab="templates"
              data-action="click->hub-settings#switchTab"
              class="px-4 py-2 text-sm font-medium transition-colors border-b-2
                     data-[active]:text-zinc-100 data-[active]:border-primary-500
                     text-zinc-500 border-transparent hover:text-zinc-300">
        Templates
      </button>
    </div>
  </div>

  <%# Prompt/Confirm Dialog — mode drives button style + input visibility via CSS %>
  <%= render Elements::DialogComponent.new(id: "settings-prompt-modal") do %>
    <div class="flex flex-col min-w-[320px] group/prompt"
         data-hub-settings-target="promptPanel"
         data-mode="prompt">
      <div class="px-5 py-4 border-b border-zinc-800 bg-zinc-950/50">
        <h3 class="text-base font-semibold text-zinc-100"
            data-hub-settings-target="promptTitle">Enter name</h3>
      </div>
      <div class="p-5 space-y-3">
        <p class="text-sm text-zinc-400"
           data-hub-settings-target="promptMessage">Enter a name</p>
        <input type="text"
               data-hub-settings-target="promptInput"
               data-action="keydown.enter->hub-settings#promptConfirm"
               class="group-data-[mode=prompt]/prompt:block hidden w-full px-3 py-2 bg-zinc-950 border border-zinc-700 rounded text-zinc-100 text-sm font-mono placeholder-zinc-600 focus:border-primary-500/50 focus:ring-1 focus:ring-primary-500/30 focus:outline-none"
               placeholder="my-name"
               autocomplete="off"
               spellcheck="false">
        <p class="text-xs text-red-400 empty:hidden"
           data-hub-settings-target="promptError"></p>
      </div>
      <div class="px-5 py-4 border-t border-zinc-800 bg-zinc-950/30 flex gap-2 justify-end">
        <button type="button"
                command="close"
                commandfor="settings-prompt-modal"
                class="px-4 py-2 text-sm font-medium text-zinc-400 hover:text-zinc-200 bg-zinc-800 hover:bg-zinc-700 rounded transition-colors">
          Cancel
        </button>
        <button type="button"
                data-action="hub-settings#promptConfirm"
                class="px-4 py-2 text-sm font-medium text-white rounded transition-colors
                       group-data-[mode=prompt]/prompt:bg-primary-600 group-data-[mode=prompt]/prompt:hover:bg-primary-500
                       group-data-[mode=confirm]/prompt:bg-red-600 group-data-[mode=confirm]/prompt:hover:bg-red-500">
          <span class="group-data-[mode=prompt]/prompt:inline hidden">Create</span>
          <span class="group-data-[mode=confirm]/prompt:inline hidden">Delete</span>
        </button>
      </div>
    </div>
  <% end %>

  <%# Content — tab panels %>
  <div class="flex-1 overflow-y-auto">

    <%# Config Tab %>
    <div data-hub-settings-target="tabPanel" data-tab-panel="config">
      <div class="max-w-4xl mx-auto px-4 py-6 lg:py-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

          <%# Tree Navigation (left) — data-view drives which child is visible %>
          <div class="lg:col-span-1">

            <%# Scope sub-tabs: Repository | Device %>
            <div class="flex gap-1 mb-3">
              <button type="button"
                      data-config-scope="repo"
                      data-action="hub-settings#switchConfigScope"
                      class="flex-1 px-3 py-1.5 text-xs font-medium rounded transition-colors
                             data-[active]:bg-zinc-800 data-[active]:text-zinc-200
                             text-zinc-500 hover:text-zinc-300"
                      data-active>
                Repository
              </button>
              <button type="button"
                      data-config-scope="device"
                      data-action="hub-settings#switchConfigScope"
                      class="flex-1 px-3 py-1.5 text-xs font-medium rounded transition-colors
                             data-[active]:bg-zinc-800 data-[active]:text-zinc-200
                             text-zinc-500 hover:text-zinc-300">
                Device
              </button>
            </div>

            <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-4 group/tree"
                 data-hub-settings-target="treePanel"
                 data-view="loading">

              <%# Loading / Disconnected feedback %>
              <div class="group-data-[view=loading]/tree:block group-data-[view=disconnected]/tree:block hidden py-4 text-center">
                <p class="text-sm text-zinc-500"
                   data-hub-settings-target="treeFeedback">Connecting to hub...</p>
              </div>

              <%# Empty state — no config directory found for active scope %>
              <div class="group-data-[view=empty]/tree:block hidden text-center py-6">
                <p class="text-sm text-zinc-500 mb-3">No configuration found</p>
                <button type="button"
                        data-action="hub-settings#initBotster"
                        class="px-3 py-1.5 text-xs font-medium text-primary-400 bg-primary-500/10 border border-primary-500/30 rounded hover:bg-primary-500/20 transition-colors">
                  Initialize
                </button>
              </div>

              <%# Tree view — dynamically rendered by Stimulus %>
              <div data-hub-settings-target="treeContainer"
                   class="group-data-[view=tree]/tree:block hidden space-y-4">
              </div>
            </div>
          </div>

          <%# Editor (right) — data-editor drives which child + buttons are visible %>
          <div class="lg:col-span-2">
            <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg group/editor"
                 data-hub-settings-target="editorPanel"
                 data-editor="empty">

              <%# Editor header %>
              <div class="flex items-center justify-between px-4 py-3 border-b border-zinc-800">
                <div class="min-w-0">
                  <span data-hub-settings-target="editorTitle"
                        class="text-sm font-mono text-zinc-400">
                    Select a file
                  </span>
                </div>
                <div class="flex items-center gap-2">
                  <button type="button"
                          data-action="hub-settings#revert"
                          class="group-data-[editor=editing]/editor:block hidden px-3 py-1.5 text-xs font-medium text-zinc-400 hover:text-zinc-200 bg-zinc-800 hover:bg-zinc-700 rounded transition-colors">
                    Revert
                  </button>
                  <button type="button"
                          data-hub-settings-target="saveBtn"
                          data-action="hub-settings#save"
                          class="group-data-[editor=editing]/editor:block hidden px-3 py-1.5 text-xs font-medium text-emerald-400 hover:text-emerald-300 bg-emerald-500/10 hover:bg-emerald-500/20 border border-emerald-500/30 rounded transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
                          disabled>
                    Save
                  </button>
                  <button type="button"
                          data-hub-settings-target="createBtn"
                          data-action="hub-settings#createFile"
                          class="group-data-[editor=creating]/editor:block hidden px-3 py-1.5 text-xs font-medium text-primary-400 hover:text-primary-300 bg-primary-500/10 hover:bg-primary-500/20 border border-primary-500/30 rounded transition-colors">
                    Create
                  </button>
                  <button type="button"
                          data-hub-settings-target="deleteBtn"
                          data-action="hub-settings#deleteFile"
                          class="group-data-[editor=editing]/editor:block hidden px-3 py-1.5 text-xs font-medium text-red-400 hover:text-red-300 bg-red-500/10 hover:bg-red-500/20 border border-red-500/30 rounded transition-colors">
                    Delete
                  </button>
                </div>
              </div>

              <%# Empty state %>
              <div class="group-data-[editor=empty]/editor:block hidden py-16 text-center">
                <%= icon "document-text", class: "size-12 text-zinc-700 mx-auto mb-4" %>
                <p class="text-sm text-zinc-500">Select a config file to edit</p>
              </div>

              <%# Loading state %>
              <div class="group-data-[editor=loading]/editor:block hidden py-16 text-center">
                <p class="text-sm text-zinc-500">Loading...</p>
              </div>

              <%# Textarea — visible in editing and creating modes %>
              <div class="group-data-[editor=editing]/editor:block group-data-[editor=creating]/editor:block hidden">
                <textarea data-hub-settings-target="editor"
                          data-action="input->hub-settings#onEditorInput"
                          class="w-full min-h-[400px] p-4 bg-transparent text-sm font-mono text-zinc-200 placeholder-zinc-600 border-0 focus:ring-0 focus:outline-none resize-y"
                          spellcheck="false"
                          placeholder="Empty file"></textarea>
              </div>

              <%# Error state %>
              <div class="group-data-[editor=error]/editor:block hidden py-16 text-center">
                <p class="text-sm text-red-400"
                   data-hub-settings-target="editorErrorMsg"></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%# Templates Tab %>
    <div data-hub-settings-target="tabPanel" data-tab-panel="templates" class="hidden">
      <div class="max-w-4xl mx-auto px-4 py-6 lg:py-8">
        <div>

          <% if @templates.empty? %>
            <p class="text-sm text-zinc-500 text-center py-8">No templates available</p>
          <% else %>

            <%# Catalog cards — each category as a section %>
            <div data-hub-templates-target="catalog">
              <% @templates.keys.sort.each do |category| %>
                <div class="mb-6">
                  <h3 class="text-xs font-medium text-zinc-500 uppercase tracking-wider mb-3"><%= category %></h3>
                  <div class="space-y-2">
                    <% @templates[category].each do |template| %>
                      <button type="button"
                              data-action="hub-templates#preview"
                              data-hub-templates-target="card"
                              data-slug="<%= template[:slug] %>"
                              data-dest="<%= template[:dest] %>"
                              class="w-full text-left px-3 py-3 rounded-lg border border-zinc-700/50 hover:border-zinc-600 hover:bg-zinc-800/50 transition-colors">
                        <div class="flex items-start justify-between gap-2">
                          <div class="min-w-0">
                            <div class="text-sm font-medium text-zinc-200"><%= template[:name] %></div>
                            <div class="text-xs text-zinc-500 mt-0.5 truncate"><%= template[:description] %></div>
                          </div>
                          <span data-hub-templates-target="badge"
                                data-badge-for="<%= template[:slug] %>"
                                class="shrink-0 text-[10px] px-1.5 py-0.5 rounded bg-zinc-700/50 text-zinc-500">
                            available
                          </span>
                        </div>
                      </button>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>

            <%# Preview panels — one per template, hidden until selected %>
            <% @templates.values.flatten.each do |template| %>
              <% default_scope = template[:scope] || "device" %>
              <div data-hub-templates-target="previewPanel"
                   data-slug="<%= template[:slug] %>"
                   data-dest="<%= template[:dest] %>"
                   data-content="<%= template[:content] %>"
                   data-default-scope="<%= default_scope %>"
                   class="hidden">

                <div class="mb-4">
                  <button type="button"
                          data-action="hub-templates#backToCatalog"
                          class="text-sm text-zinc-500 hover:text-zinc-300 transition-colors flex items-center gap-1">
                    <%= icon "arrow-left", class: "size-4" %>
                    Back to catalog
                  </button>
                </div>

                <div class="mb-4 flex items-start justify-between gap-4">
                  <div>
                    <h2 class="text-lg font-semibold text-zinc-100"><%= template[:name] %></h2>
                    <p class="text-sm text-zinc-500 mt-1"><%= template[:description] %></p>
                  </div>
                  <div class="flex items-center gap-2">
                    <%# Scope selector %>
                    <div class="flex gap-1">
                      <button type="button"
                              data-action="hub-templates#switchInstallScope"
                              data-hub-templates-target="scopeBtn"
                              data-slug="<%= template[:slug] %>"
                              data-install-scope="device"
                              class="px-2 py-1 text-xs font-medium rounded transition-colors
                                     data-[active]:bg-zinc-700 data-[active]:text-zinc-200
                                     text-zinc-500 hover:text-zinc-300"
                              <%= "data-active" if default_scope == "device" %>>
                        Device
                      </button>
                      <button type="button"
                              data-action="hub-templates#switchInstallScope"
                              data-hub-templates-target="scopeBtn"
                              data-slug="<%= template[:slug] %>"
                              data-install-scope="repo"
                              class="px-2 py-1 text-xs font-medium rounded transition-colors
                                     data-[active]:bg-zinc-700 data-[active]:text-zinc-200
                                     text-zinc-500 hover:text-zinc-300"
                              <%= "data-active" if default_scope == "repo" %>>
                        Repo
                      </button>
                    </div>
                    <button type="button"
                            data-action="hub-templates#toggleInstall"
                            data-hub-templates-target="installBtn"
                            data-slug="<%= template[:slug] %>"
                            class="shrink-0 px-4 py-2 text-sm font-medium rounded transition-colors disabled:opacity-50
                                   text-emerald-400 hover:text-emerald-300 bg-emerald-500/10 hover:bg-emerald-500/20 border border-emerald-500/30">
                      Install
                    </button>
                  </div>
                </div>

                <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg overflow-hidden">
                  <div class="px-4 py-2 border-b border-zinc-800">
                    <span class="text-xs text-zinc-500 font-mono"><%= template[:dest] %></span>
                  </div>
                  <pre class="p-4 overflow-x-auto text-sm font-mono text-zinc-300 max-h-[500px] overflow-y-auto"><code><%= template[:content] %></code></pre>
                </div>
              </div>
            <% end %>

          <% end %>

          <%# Status feedback — shown while checking installed state %>
          <p data-hub-templates-target="feedback"
             class="text-xs text-zinc-600 text-center mt-4 empty:hidden"></p>
        </div>
      </div>
    </div>
  </div>
</div>
