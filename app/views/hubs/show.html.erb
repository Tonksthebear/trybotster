<% content_for :head do %>
  <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/@xterm/xterm@5.5.0/css/xterm.min.css" %>
  <%= tag.meta name: "headscale-url", content: Rails.application.config.headscale_url || "http://localhost:8080" %>
  <% if @hub.tailscale_hostname.present? %>
    <%= tag.meta name: "cli-hostname", content: @hub.tailscale_hostname %>
  <% end %>
<% end %>

<%#
  Multi-controller architecture:
  - connection: Tailscale mesh + WireGuard E2E encryption
  - terminal-display: xterm.js rendering
  - agents: Agent list and management

  Communication:
  - Events: connection:connected, connection:message, connection:disconnected
  - Outlets: terminal-display and agents use connection outlet
%>
<div class="min-h-[calc(100vh-8rem)]"
     data-controller="connection terminal-display agents"
     data-connection-hub-id-value="<%= @hub.id %>"
     data-connection-wasm-js-path-value="/wasm/libsignal_wasm.js"
     data-connection-wasm-bg-path-value="/wasm/libsignal_wasm_bg.wasm"
     data-terminal-display-connection-outlet="[data-controller~='connection']"
     data-agents-connection-outlet="[data-controller~='connection']"
     data-agents-modal-outlet="#new-agent-modal">

  <%# Header %>
  <div class="border-b border-zinc-800 bg-zinc-900/50">
    <div class="max-w-7xl mx-auto px-4 py-4">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div class="flex items-center gap-4">
          <%= link_to hubs_path, class: "text-zinc-500 hover:text-zinc-300 transition-colors" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
          <% end %>
          <div>
            <h1 class="text-xl font-bold text-zinc-100 font-mono"><%= @hub.identifier.truncate(24) %></h1>
            <p class="text-sm text-zinc-500 mt-0.5">
              <%= @hub.repo || "No repository" %> &mdash; <%= @hub.hub_agents.count %> agents
            </p>
          </div>
        </div>

        <%# Connection status - multi-step indicator %>
        <div class="flex items-center gap-3">
          <div data-connection-target="statusContainer" class="flex flex-col items-end gap-0.5">
            <div data-connection-target="status" class="text-sm font-medium text-zinc-400 flex items-center gap-2">
              <span data-connection-target="statusIcon" class="flex-shrink-0">
                <svg class="w-4 h-4 animate-spin text-zinc-500" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
              </span>
              <span data-connection-target="statusText">Initializing...</span>
            </div>
            <div data-connection-target="statusDetail" class="text-xs text-zinc-600 font-mono"></div>
          </div>
          <button type="button"
                  data-action="connection#disconnectAction"
                  data-connection-target="disconnectBtn"
                  class="hidden px-3 py-1.5 text-sm font-medium text-zinc-400 hover:text-zinc-200 border border-zinc-700 hover:border-zinc-600 rounded transition-colors">
            Disconnect
          </button>
        </div>
      </div>
    </div>
  </div>

  <%# Security Banner - updates based on connection state %>
  <div data-connection-target="securityBanner" class="border-b border-zinc-700/50 bg-zinc-800/30 transition-colors duration-300">
    <div class="max-w-7xl mx-auto px-4 py-3">
      <div class="flex items-center gap-3">
        <span data-connection-target="securityIcon" class="flex-shrink-0">
          <svg class="w-4 h-4 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
          </svg>
        </span>
        <p class="text-sm" data-connection-target="securityText">
          <span class="text-zinc-400">Establishing secure connection...</span>
        </p>
      </div>
    </div>
  </div>

  <%# Main Content %>
  <div class="max-w-7xl mx-auto px-4 py-6">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">

      <%# Sidebar %>
      <div class="lg:col-span-1 space-y-4">

        <%# Agent List %>
        <div class="bg-zinc-900 border border-zinc-800 rounded-lg overflow-hidden">
          <div class="px-4 py-3 border-b border-zinc-800 flex items-center justify-between">
            <span class="text-sm font-medium text-zinc-300">Agents</span>
            <div class="flex items-center gap-1">
              <button type="button"
                      data-action="agents#createAgent"
                      class="p-1.5 text-cyan-400 hover:bg-zinc-800 rounded transition-colors"
                      title="New Agent">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
              </button>
              <button type="button"
                      data-action="agents#closeAgent"
                      class="p-1.5 text-zinc-500 hover:text-zinc-300 hover:bg-zinc-800 rounded transition-colors disabled:opacity-30"
                      title="Close Agent"
                      disabled>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
              <button type="button"
                      class="p-1.5 text-zinc-500 hover:text-zinc-300 hover:bg-zinc-800 rounded transition-colors"
                      data-action="agents#requestAgentList"
                      title="Refresh">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
              </button>
            </div>
          </div>
          <div data-agents-target="list" class="max-h-64 lg:max-h-96 overflow-y-auto">
            <div class="px-4 py-8 text-center">
              <p class="text-sm text-zinc-500">Loading agents...</p>
            </div>
          </div>
        </div>

        <%# Agent Actions %>
        <div class="bg-zinc-900 border border-zinc-800 rounded-lg p-4 space-y-3">
          <button type="button"
                  data-action="agents#createAgent"
                  class="w-full flex items-center justify-center gap-2 px-4 py-2.5 bg-cyan-500 hover:bg-cyan-400 text-zinc-950 text-sm font-medium rounded transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            New Agent
          </button>
          <button type="button"
                  data-action="agents#closeAgent"
                  class="w-full flex items-center justify-center gap-2 px-4 py-2.5 border border-zinc-700 text-zinc-400 hover:text-zinc-200 hover:border-zinc-600 text-sm font-medium rounded transition-colors disabled:opacity-30"
                  disabled>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            Close Agent
          </button>
        </div>

        <%# Hub Info %>
        <div class="bg-zinc-900 border border-zinc-800 rounded-lg p-4">
          <div class="flex items-center gap-2 mb-3">
            <svg class="w-4 h-4 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2" />
            </svg>
            <span class="text-sm font-medium text-zinc-400">Hub Info</span>
          </div>
          <div class="space-y-1 text-xs">
            <% if @hub.device %>
              <div class="text-zinc-500"><%= @hub.device.name %></div>
              <div class="font-mono text-zinc-600 truncate"><%= @hub.device.fingerprint %></div>
            <% end %>
            <% if @hub.e2e_enabled? %>
              <div class="inline-flex items-center gap-1 px-1.5 py-0.5 text-xs font-medium bg-emerald-500/10 text-emerald-400 rounded mt-2">
                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
                </svg>
                E2E Ready
              </div>
            <% end %>
          </div>

          <%# Share Hub Button - generates invite link %>
          <div class="mt-4 pt-3 border-t border-zinc-800">
            <button type="button"
                    data-action="connection#requestInviteBundle"
                    data-connection-target="shareBtn"
                    class="w-full flex items-center justify-center gap-2 px-3 py-2 border border-zinc-700 text-zinc-400 hover:text-zinc-200 hover:border-zinc-600 text-sm font-medium rounded transition-colors disabled:opacity-30">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
              </svg>
              Share Hub
            </button>
            <p class="text-xs text-zinc-600 mt-2 text-center" data-connection-target="shareStatus"></p>
            <p class="text-xs text-zinc-600 mt-1 text-center">Connect another device without QR</p>
          </div>
        </div>
      </div>

      <%# Terminal Panel %>
      <div class="lg:col-span-3">
        <div class="bg-zinc-950 border border-zinc-800 rounded-lg overflow-hidden">
          <%# Terminal header %>
          <div class="px-4 py-2 border-b border-zinc-800 flex items-center justify-between bg-zinc-900">
            <div class="flex items-center gap-3">
              <div class="flex items-center gap-1.5">
                <span class="w-3 h-3 rounded-full bg-red-500/80"></span>
                <span class="w-3 h-3 rounded-full bg-yellow-500/80"></span>
                <span class="w-3 h-3 rounded-full bg-green-500/80"></span>
              </div>
              <span class="text-sm font-mono text-zinc-400">Terminal</span>
            </div>
            <div class="flex items-center gap-3">
              <span class="text-xs text-zinc-600 hidden sm:inline">scroll: mouse wheel</span>
              <span class="text-xs text-zinc-500" data-agents-target="selectedLabel">No agent</span>
              <span data-connection-target="terminalBadge" class="inline-flex items-center gap-1 px-2 py-0.5 text-xs font-medium bg-zinc-700/50 text-zinc-500 rounded">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
                <span>Connecting...</span>
              </span>
            </div>
          </div>
          <%# Terminal content - target for terminal-display controller %>
          <div data-terminal-display-target="container" class="h-[calc(100vh-20rem)] min-h-[300px] bg-zinc-950"></div>
        </div>
      </div>
    </div>
  </div>

  <%# Mobile Touch Controls %>
  <div class="lg:hidden border-t border-zinc-800 bg-zinc-900/50 p-4">
    <div class="grid grid-cols-4 gap-2 mb-3">
      <button type="button" class="px-3 py-3 bg-zinc-800 hover:bg-zinc-700 text-zinc-300 text-sm font-mono rounded transition-colors" data-action="terminal-display#sendCtrlC">^C</button>
      <button type="button" class="px-3 py-3 bg-zinc-800 hover:bg-zinc-700 text-zinc-300 text-sm rounded transition-colors" data-action="terminal-display#sendEnter">Enter</button>
      <button type="button" class="px-3 py-3 bg-zinc-800 hover:bg-zinc-700 text-zinc-300 text-sm rounded transition-colors" data-action="terminal-display#sendEscape">Esc</button>
      <button type="button" class="px-3 py-3 bg-zinc-800 hover:bg-zinc-700 text-zinc-300 text-sm rounded transition-colors" data-action="terminal-display#sendTab">Tab</button>
    </div>
    <div class="grid grid-cols-4 gap-2">
      <button type="button" class="px-3 py-3 bg-zinc-800 hover:bg-zinc-700 text-zinc-300 rounded transition-colors" data-action="terminal-display#sendArrowUp">
        <svg class="w-4 h-4 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" /></svg>
      </button>
      <button type="button" class="px-3 py-3 bg-zinc-800 hover:bg-zinc-700 text-zinc-300 rounded transition-colors" data-action="terminal-display#sendArrowDown">
        <svg class="w-4 h-4 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
      </button>
      <button type="button" class="px-3 py-3 bg-zinc-800 hover:bg-zinc-700 text-zinc-300 rounded transition-colors" data-action="terminal-display#sendArrowLeft">
        <svg class="w-4 h-4 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
      </button>
      <button type="button" class="px-3 py-3 bg-zinc-800 hover:bg-zinc-700 text-zinc-300 rounded transition-colors" data-action="terminal-display#sendArrowRight">
        <svg class="w-4 h-4 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
      </button>
    </div>
  </div>

  <%# New Agent Modal %>
  <div id="new-agent-modal"
       data-controller="modal"
       class="hidden fixed inset-0 z-50">
    <div data-action="click->modal#closeFromBackdrop"
         class="fixed inset-0 bg-black/60 backdrop-blur-sm flex items-center justify-center p-4">
      <div data-modal-target="content"
           class="bg-zinc-900 border border-zinc-700 rounded-xl shadow-2xl w-full max-w-md">
        <div class="px-6 py-4 border-b border-zinc-800">
          <h3 class="text-lg font-semibold text-zinc-100">New Agent</h3>
          <p class="text-sm text-zinc-500 mt-1">Enter an issue number or branch name</p>
        </div>
        <form data-action="submit->agents#submitNewAgent" class="p-6">
          <div class="space-y-4">
            <div>
              <label for="issue_or_branch" class="block text-sm font-medium text-zinc-300 mb-2">
                Issue # or Branch Name
              </label>
              <input type="text"
                     name="issue_or_branch"
                     id="issue_or_branch"
                     placeholder="123 or feature/my-branch"
                     class="w-full px-4 py-3 bg-zinc-800 border border-zinc-700 rounded-lg text-zinc-100 placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent"
                     autocomplete="off"
                     autofocus>
            </div>
          </div>
          <div class="flex items-center justify-end gap-3 mt-6">
            <button type="button"
                    data-action="modal#hide"
                    class="px-4 py-2 text-sm font-medium text-zinc-400 hover:text-zinc-200 transition-colors">
              Cancel
            </button>
            <button type="submit"
                    class="px-4 py-2 bg-cyan-500 hover:bg-cyan-400 text-zinc-950 text-sm font-medium rounded-lg transition-colors">
              Create Agent
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
