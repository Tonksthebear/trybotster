<%#
  Hub Landing Page
  - Shows hub information
  - Lists agents with links to terminal views
  - Connection controller for QR code flow (fragment contains E2E bundle)
  - No terminal - user selects an agent to view terminal
%>

<%# Permanent connection container - survives Turbo navigation, uses global queries for status %>
<div id="hub-connection-permanent"
     data-turbo-permanent
     data-controller="connection"
     data-connection-hub-id-value="<%= @hub.id %>"
     data-connection-worker-url-value="<%= asset_path('workers/signal.js') %>"
     data-connection-wasm-js-url-value="<%= asset_path('libsignal_wasm.js') %>"
     data-connection-wasm-binary-url-value="<%= asset_path('libsignal_wasm_bg.wasm') %>"
     data-connection-security-banner-base-class="hidden">
</div>

<div class="h-full flex flex-col overflow-hidden"
     data-controller="agents"
     data-agents-connection-outlet="#hub-connection-permanent"
     data-agents-hub-name-value="<%= @hub.repo.presence || @hub.identifier.truncate(16) %>"
     data-agents-hub-id-value="<%= @hub.id %>">

  <%# Header %>
  <div class="shrink-0 border-b border-zinc-800 bg-zinc-900/50">
    <div class="px-4 py-4 lg:py-6">
      <div class="flex items-start justify-between gap-4">
        <div class="min-w-0">
          <h1 class="text-xl lg:text-2xl font-bold text-zinc-100 font-mono truncate"><%= @hub.device&.name || @hub.identifier.truncate(32) %></h1>
          <p class="text-sm text-zinc-500 mt-1 truncate">
            <%= @hub.repo || "No repository" %>
          </p>
        </div>

        <%# Connection status %>
        <div class="flex items-center gap-2 shrink-0">
          <div data-connection-target="status" class="text-sm font-medium text-zinc-400 flex items-center gap-2">
            <span data-connection-target="statusIcon" class="shrink-0">
              <svg class="size-4 animate-spin text-zinc-500" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </span>
            <span data-connection-target="statusText">Initializing...</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# Content %>
  <div class="flex-1 overflow-y-auto">
    <div class="max-w-3xl mx-auto px-4 py-6 lg:py-8">
      <%# Hub Info Card %>
      <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-4 lg:p-6 mb-6">
        <h2 class="text-sm font-medium text-zinc-400 uppercase tracking-wider mb-4">Hub Information</h2>
        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <dt class="text-xs text-zinc-500">Identifier</dt>
            <dd class="text-sm text-zinc-200 font-mono mt-1 truncate"><%= @hub.identifier %></dd>
          </div>
          <div>
            <dt class="text-xs text-zinc-500">Repository</dt>
            <dd class="text-sm text-zinc-200 font-mono mt-1 truncate"><%= @hub.repo || "â€”" %></dd>
          </div>
          <div>
            <dt class="text-xs text-zinc-500">Status</dt>
            <dd class="text-sm mt-1 flex items-center gap-2">
              <span class="size-2 rounded-full <%= @hub.active? ? 'bg-success-500' : 'bg-zinc-600' %>"></span>
              <span class="text-zinc-200"><%= @hub.active? ? "Online" : "Offline" %></span>
            </dd>
          </div>
          <div>
            <dt class="text-xs text-zinc-500">Last Seen</dt>
            <dd class="text-sm text-zinc-200 mt-1">
              <% if @hub.last_seen_at %>
                <%= time_ago_in_words(@hub.last_seen_at) %> ago
              <% else %>
                Never
              <% end %>
            </dd>
          </div>
        </dl>
      </div>

      <%# Agents Section %>
      <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-4 lg:p-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-sm font-medium text-zinc-400 uppercase tracking-wider">Agents</h2>
          <button type="button"
                  class="p-1.5 text-zinc-500 hover:text-primary-400 hover:bg-zinc-800/50 rounded transition-colors"
                  title="New Agent"
                  command="show-modal"
                  commandfor="new-agent-modal">
            <svg class="size-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
          </button>
        </div>

        <div data-test="hub-agents-list" data-agents-target="landingAgentList" class="space-y-2">
          <%# Populated by JS after connection %>
          <div class="py-8 text-center">
            <svg class="size-8 text-zinc-700 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
            </svg>
            <p class="text-sm text-zinc-500">Connecting to hub...</p>
            <p class="text-xs text-zinc-600 mt-1">Agents will appear here once connected</p>
          </div>
        </div>
      </div>

      <%# Empty state message when no agents %>
      <div data-agents-target="noAgentsMessage" class="hidden mt-6 text-center py-8">
        <svg class="size-12 text-zinc-700 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
        </svg>
        <h3 class="text-lg font-medium text-zinc-300 mb-2">No agents running</h3>
        <p class="text-sm text-zinc-500 mb-4">Start a new agent to begin working</p>
        <button type="button"
                command="show-modal"
                commandfor="new-agent-modal"
                class="inline-flex items-center gap-2 px-4 py-2 bg-primary-600 hover:bg-primary-500 text-white rounded-lg text-sm font-medium transition-colors">
          <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          New Agent
        </button>
      </div>
    </div>
  </div>

  <%# New Agent Modal - Two Step Flow %>
  <%= render Elements::DialogComponent.new(id: "new-agent-modal") do %>
    <%# Step 1: Worktree Selection %>
    <div data-agents-target="step1" class="flex flex-col min-h-0">
      <%# Header %>
      <div class="px-5 py-4 border-b border-zinc-800 bg-zinc-950/50">
        <div class="flex items-center gap-3">
          <span class="size-7 rounded-md bg-primary-500/20 text-primary-400 text-xs font-bold flex items-center justify-center border border-primary-500/30">1</span>
          <div>
            <h3 class="text-base font-semibold text-zinc-100">Select Worktree</h3>
            <p class="text-xs text-zinc-500 mt-0.5">Choose existing or create new</p>
          </div>
        </div>
      </div>

      <div class="flex-1 overflow-y-auto">
        <%# Existing Worktrees Section %>
        <div class="p-5">
          <div class="flex items-center gap-2 mb-3">
            <svg class="size-4 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
            </svg>
            <h4 class="text-xs font-medium text-zinc-400 uppercase tracking-wider">Existing</h4>
          </div>
          <div data-agents-target="worktreeList" class="space-y-1.5 max-h-40 overflow-y-auto">
            <div class="py-6 text-center">
              <span class="text-sm text-zinc-600">No existing worktrees</span>
            </div>
          </div>
        </div>

        <%# Divider %>
        <div class="px-5">
          <div class="flex items-center gap-3">
            <div class="flex-1 h-px bg-zinc-800"></div>
            <span class="text-xs text-zinc-600 uppercase tracking-wider">or</span>
            <div class="flex-1 h-px bg-zinc-800"></div>
          </div>
        </div>

        <%# Create New Section %>
        <div class="p-5">
          <div class="flex items-center gap-2 mb-3">
            <svg class="size-4 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            <h4 class="text-xs font-medium text-zinc-400 uppercase tracking-wider">Create New</h4>
          </div>
          <div class="flex gap-2">
            <input type="text"
                   data-agents-target="newBranchInput"
                   placeholder="Issue # or branch name"
                   class="flex-1 px-3 py-2.5 bg-zinc-950 border border-zinc-700 rounded text-zinc-100 placeholder-zinc-600 text-sm font-mono focus:outline-hidden focus:border-primary-500 focus:ring-1 focus:ring-primary-500/50 transition-colors"
                   autocomplete="off"
                   data-action="keydown.enter->agents#selectNewBranch">
            <%= render Elements::ButtonComponent.new("Next", data: { action: "agents#selectNewBranch" }) %>
          </div>
        </div>
      </div>

      <%# Footer %>
      <div class="px-5 py-4 border-t border-zinc-800 bg-zinc-950/30">
        <%= render Elements::ButtonComponent.new("Cancel",
          color: :neutral,
          variant: :ghost,
          class: "w-full",
          command: "close",
          commandfor: "new-agent-modal"
        ) %>
      </div>
    </div>

    <%# Step 2: Prompt Input %>
    <div data-agents-target="step2" class="hidden flex flex-col min-h-0">
      <%# Header %>
      <div class="px-5 py-4 border-b border-zinc-800 bg-zinc-950/50">
        <div class="flex items-center gap-3">
          <span class="size-7 rounded-md bg-primary-500/20 text-primary-400 text-xs font-bold flex items-center justify-center border border-primary-500/30">2</span>
          <div>
            <h3 class="text-base font-semibold text-zinc-100">Initial Prompt</h3>
            <p class="text-xs text-zinc-500 mt-0.5">What should the agent work on?</p>
          </div>
        </div>
      </div>

      <div class="flex-1 overflow-y-auto p-5">
        <%# Selection Summary %>
        <div class="mb-4 px-3 py-2.5 bg-zinc-950 border border-zinc-800 rounded flex items-center gap-3">
          <svg class="size-4 text-success-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <div class="min-w-0 flex-1">
            <span class="text-xs text-zinc-500 block">Worktree</span>
            <span data-agents-target="selectedWorktreeLabel" class="text-sm text-zinc-200 font-mono truncate block"></span>
          </div>
        </div>

        <%# Prompt Input %>
        <div class="flex items-center gap-2 mb-2">
          <svg class="size-4 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <label class="text-xs font-medium text-zinc-400 uppercase tracking-wider">Task</label>
          <span class="text-xs text-zinc-600">(optional)</span>
        </div>
        <textarea data-agents-target="promptInput"
                  rows="4"
                  placeholder="Describe the task..."
                  class="w-full px-3 py-2.5 bg-zinc-950 border border-zinc-700 rounded text-zinc-100 placeholder-zinc-600 text-sm focus:outline-hidden focus:border-primary-500 focus:ring-1 focus:ring-primary-500/50 transition-colors resize-none"></textarea>
        <p class="text-xs text-zinc-600 mt-2">Leave blank for interactive session</p>
      </div>

      <%# Footer %>
      <div class="px-5 py-4 border-t border-zinc-800 bg-zinc-950/30 flex gap-2">
        <%= render Elements::ButtonComponent.new("Back",
          color: :neutral,
          variant: :outline,
          class: "flex-1",
          data: { action: "agents#goBackToStep1" }
        ) %>
        <%= render Elements::ButtonComponent.new("Start Agent",
          class: "flex-1",
          data: { action: "agents#submitAgent" },
          command: "close", commandfor: "new-agent-modal"
        ) %>
      </div>
    </div>
  <% end %>
</div>
