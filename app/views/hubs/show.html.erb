<div class="h-full flex flex-col overflow-hidden">
  <%# Header %>
  <div class="shrink-0 border-b border-zinc-800 bg-zinc-900/50">
    <div class="px-4 py-4 lg:py-6">
      <div class="flex items-start justify-between gap-4">
        <div class="min-w-0">
          <h1 class="text-xl lg:text-2xl font-bold text-zinc-100 font-mono truncate"><%= Current.hub.device&.name || Current.hub.identifier.truncate(32) %></h1>
          <p class="text-sm text-zinc-500 mt-1 truncate">
            <%= Current.hub.repo || "No repository" %>
          </p>
        </div>

        <%# Connection status - CSS-driven via data attributes %>
        <div data-controller="hub-status"
             data-hub-status-hub-id-value="<%= Current.hub.id %>"
             data-hub-status-state-value="disconnected"
             class="group flex items-center gap-2 shrink-0 text-sm font-medium">

          <%# Disconnected %>
          <span class="hidden group-data-[hub-status-state-value=disconnected]:flex items-center gap-2 text-zinc-500">
            <%= icon "signal-slash", class: "size-4" %>
            <span>Disconnected</span>
          </span>

          <%# Loading (WASM/session) %>
          <span class="hidden group-data-[hub-status-state-value=loading]:flex items-center gap-2 text-cyan-400">
            <%= icon "arrow-path", class: "size-4 animate-spin" %>
            <span class="text-zinc-400">Loading encryption...</span>
          </span>

          <%# Connecting (channel) %>
          <span class="hidden group-data-[hub-status-state-value=connecting]:flex items-center gap-2 text-cyan-400">
            <%= icon "arrow-path", class: "size-4 animate-spin" %>
            <span class="text-zinc-400">Connecting...</span>
          </span>

          <%# Handshake (waiting for CLI) %>
          <span class="hidden group-data-[hub-status-state-value=handshake]:flex items-center gap-2 text-amber-400">
            <%= icon "arrow-path", class: "size-4 animate-spin" %>
            <span>Waiting for CLI...</span>
          </span>

          <%# Connected %>
          <span class="hidden group-data-[hub-status-state-value=connected]:flex items-center gap-2 text-emerald-400">
            <%= icon "lock-closed", variant: :solid, class: "size-4" %>
            <span>Connected</span>
          </span>

          <%# Error %>
          <span class="hidden group-data-[hub-status-state-value=error]:flex items-center gap-2 text-red-400">
            <%= icon "exclamation-circle", class: "size-4" %>
            <span>Connection failed</span>
          </span>
        </div>
      </div>
    </div>
  </div>

  <%# Content %>
  <div class="flex-1 overflow-y-auto">
    <div class="max-w-3xl mx-auto px-4 py-6 lg:py-8">
      <%# Hub Info Card %>
      <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-4 lg:p-6 mb-6">
        <h2 class="text-sm font-medium text-zinc-400 uppercase tracking-wider mb-4">Hub Information</h2>
        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <dt class="text-xs text-zinc-500">Identifier</dt>
            <dd class="text-sm text-zinc-200 font-mono mt-1 truncate"><%= Current.hub.identifier %></dd>
          </div>
          <div>
            <dt class="text-xs text-zinc-500">Repository</dt>
            <dd class="text-sm text-zinc-200 font-mono mt-1 truncate"><%= Current.hub.repo || "â€”" %></dd>
          </div>
          <div>
            <dt class="text-xs text-zinc-500">Status</dt>
            <dd class="text-sm mt-1 flex items-center gap-2">
              <span class="size-2 rounded-full <%= Current.hub.active? ? 'bg-success-500' : 'bg-zinc-600' %>"></span>
              <span class="text-zinc-200"><%= Current.hub.active? ? "Online" : "Offline" %></span>
            </dd>
          </div>
          <div>
            <dt class="text-xs text-zinc-500">Last Seen</dt>
            <dd class="text-sm text-zinc-200 mt-1">
              <% if Current.hub.last_seen_at %>
                <%= time_ago_in_words(Current.hub.last_seen_at) %> ago
              <% else %>
                Never
              <% end %>
            </dd>
          </div>
        </dl>
      </div>

      <%# Agents Section %>
      <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-4 lg:p-6"
           data-controller="agent-list"
           data-agent-list-hub-id-value="<%= Current.hub.id %>"
           data-agent-list-agents-value="[]"
           id="hub-agent-list">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-sm font-medium text-zinc-400 uppercase tracking-wider">Agents</h2>
          <button type="button"
                  data-controller="requires-connection"
                  data-requires-connection-key-value="<%= Current.hub.id %>"
                  class="p-1.5 text-zinc-500 hover:text-primary-400 hover:bg-zinc-800/50 rounded transition-colors disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:text-zinc-500"
                  title="New Agent"
                  command="show-modal"
                  commandfor="new-agent-modal"
                  disabled>
            <%= icon "plus", class: "size-5" %>
          </button>
        </div>

        <%# Template for agent cards %>
        <template data-agent-list-target="template">
          <a data-href="/hubs/{hubId}/agents/{index}"
             data-agent-id
             class="flex items-center gap-3 px-4 py-3 bg-zinc-800/50 hover:bg-zinc-800 border border-zinc-700/50 hover:border-zinc-700 rounded-lg transition-colors">
            <div class="size-10 rounded-lg bg-zinc-700/50 flex items-center justify-center text-zinc-400">
              <%= icon "command-line", class: "size-5" %>
            </div>
            <div class="flex-1 min-w-0">
              <div data-field="name" class="text-sm font-medium text-zinc-200 truncate font-mono"></div>
              <div class="text-xs text-zinc-500">Agent <span data-field="index"></span></div>
            </div>
            <%= icon "chevron-right", class: "size-5 text-zinc-600" %>
          </a>
        </template>

        <%# List container %>
        <div data-agent-list-target="list" data-test="hub-agents-list" class="space-y-2"></div>

        <%# Empty state %>
        <div data-agent-list-target="empty" class="hidden py-8 text-center">
          <%= icon "sparkles", class: "size-12 text-zinc-700 mx-auto mb-4" %>
          <h3 class="text-lg font-medium text-zinc-300 mb-2">No agents running</h3>
          <p class="text-sm text-zinc-500 mb-4">Start a new agent to begin working</p>
          <button type="button"
                  data-controller="requires-connection"
                  data-requires-connection-key-value="<%= Current.hub.id %>"
                  command="show-modal"
                  commandfor="new-agent-modal"
                  class="inline-flex items-center gap-2 px-4 py-2 bg-primary-600 hover:bg-primary-500 text-white rounded-lg text-sm font-medium transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
                  disabled>
            <%= icon "plus", class: "size-4" %>
            New Agent
          </button>
        </div>

        <%# Loading state %>
        <div data-agent-list-target="loading" class="py-8 text-center">
          <%= icon "cpu-chip", class: "size-8 text-zinc-700 mx-auto mb-3" %>
          <p class="text-sm text-zinc-500">Connecting to hub...</p>
          <p class="text-xs text-zinc-600 mt-1">Agents will appear here once connected</p>
        </div>
      </div>
    </div>
  </div>
</div>
