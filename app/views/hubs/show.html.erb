<div class="h-full flex flex-col overflow-hidden">
  <%# Header %>
  <div class="shrink-0 border-b border-zinc-800 bg-zinc-900/50">
    <div class="px-4 py-4 lg:py-6">
      <div class="flex items-start justify-between gap-4">
        <div class="min-w-0">
          <h1 class="text-xl lg:text-2xl font-bold text-zinc-100 font-mono truncate"><%= Current.hub.device&.name || Current.hub.identifier.truncate(32) %></h1>
          <p class="text-sm text-zinc-500 mt-1 truncate">
            <%= Current.hub.identifier %>
          </p>
        </div>

        <%# Connection status - three-column view %>
        <%= render "shared/connection_status", hub: Current.hub, connection_type: "hub" %>
      </div>
    </div>
  </div>

  <%# Content %>
  <div class="flex-1 overflow-y-auto">
    <div class="max-w-3xl mx-auto px-4 py-6 lg:py-8">
      <%# Hub Info Card %>
      <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-4 lg:p-6 mb-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-sm font-medium text-zinc-400 uppercase tracking-wider">Hub Information</h2>
          <div class="flex items-center gap-2">
            <%= link_to hub_settings_path(Current.hub),
                  class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-zinc-400 hover:text-zinc-200 bg-zinc-800/50 hover:bg-zinc-800 border border-zinc-700/50 rounded-lg transition-colors aria-disabled:opacity-50 aria-disabled:cursor-not-allowed aria-disabled:pointer-events-none",
                  "aria-disabled": "true",
                  data: {
                    controller: "requires-connection",
                    requires_connection_key_value: Current.hub.id,
                  } do %>
              <%= icon "cog-6-tooth", class: "size-3.5" %>
              <span>Settings</span>
            <% end %>
            <%= render Elements::ButtonComponent.new(color: :neutral, variant: :ghost, size: :sm,
                  data: {
                    controller: "requires-connection share-hub",
                    requires_connection_key_value: Current.hub.id,
                    share_hub_hub_id_value: Current.hub.id,
                    action: "share-hub#open"
                  },
                  command: "show-modal",
                  commandfor: "share-hub-modal",
                  title: "Share Hub",
                  disabled: true) do %>
              <%= icon "share", class: "size-3.5" %>
              <span>Share</span>
            <% end %>
          </div>
        </div>
        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <dt class="text-xs text-zinc-500">Identifier</dt>
            <dd class="text-sm text-zinc-200 font-mono mt-1 truncate"><%= Current.hub.identifier %></dd>
          </div>
          <div>
            <dt class="text-xs text-zinc-500">Device</dt>
            <dd class="text-sm text-zinc-200 font-mono mt-1 truncate"><%= Current.hub.device&.name || "—" %></dd>
          </div>
          <div>
            <dt class="text-xs text-zinc-500">Status</dt>
            <dd class="text-sm mt-1 flex items-center gap-2">
              <span class="size-2 rounded-full <%= Current.hub.active? ? 'bg-success-500' : 'bg-zinc-600' %>"></span>
              <span class="text-zinc-200"><%= Current.hub.active? ? "Online" : "Offline" %></span>
            </dd>
          </div>
          <div>
            <dt class="text-xs text-zinc-500">Last Seen</dt>
            <dd class="text-sm text-zinc-200 mt-1">
              <% if Current.hub.last_seen_at %>
                <%= time_ago_in_words(Current.hub.last_seen_at) %> ago
              <% else %>
                Never
              <% end %>
            </dd>
          </div>
        </dl>
      </div>

      <%# Scan QR Prompt - shown when connection needs pairing %>
      <div data-controller="scan-prompt"
           data-scan-prompt-hub-id-value="<%= Current.hub.id %>"
           class="hidden bg-amber-500/10 border border-amber-500/20 rounded-lg p-4 lg:p-6 mb-6">
        <div class="flex items-start gap-4">
          <div class="shrink-0 size-10 rounded-lg bg-amber-500/10 flex items-center justify-center">
            <%= icon "qr-code", class: "size-5 text-amber-400" %>
          </div>
          <div>
            <h3 class="text-sm font-medium text-amber-300">Scan Connection Code</h3>
            <p class="text-sm text-zinc-400 mt-1">
              Open the hub's terminal and scan the QR code displayed there to establish a secure connection.
            </p>
          </div>
        </div>
      </div>

      <%# Agents Section %>
      <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-4 lg:p-6"
           data-controller="agent-list"
           data-agent-list-hub-id-value="<%= Current.hub.id %>"
           data-agent-list-agents-value="[]"
           id="hub-agent-list">
        <div data-agent-list-target="header" class="flex items-center justify-between mb-4 hidden">
          <h2 class="text-sm font-medium text-zinc-400 uppercase tracking-wider">Agents</h2>
          <button type="button"
                  data-controller="requires-connection"
                  data-requires-connection-key-value="<%= Current.hub.id %>"
                  class="p-1.5 text-zinc-500 hover:text-primary-400 hover:bg-zinc-800/50 rounded transition-colors disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:text-zinc-500"
                  title="New Agent"
                  command="show-modal"
                  commandfor="new-agent-modal"
                  disabled>
            <%= icon "plus", class: "size-5" %>
          </button>
        </div>

        <%# Template for agent cards %>
        <template data-agent-list-target="template">
          <div class="group flex items-center gap-0 bg-zinc-800/50 hover:bg-zinc-800 border border-zinc-700/50 hover:border-zinc-700 rounded-lg transition-colors">
            <a data-href="/hubs/{hubId}/agents/{index}"
               data-agent-id
               class="flex items-center gap-3 px-4 py-3 flex-1 min-w-0">
              <div class="size-10 rounded-lg bg-zinc-700/50 flex items-center justify-center text-zinc-400 shrink-0">
                <%= icon "command-line", class: "size-5" %>
              </div>
              <div class="flex-1 min-w-0">
                <div data-field="name" class="text-sm font-medium text-zinc-200 truncate font-mono"></div>
                <div data-field="subtext" class="text-xs text-zinc-500 truncate"></div>
              </div>
              <%= icon "chevron-right", class: "size-5 text-zinc-600 shrink-0" %>
            </a>
            <button type="button"
                    data-agent-id
                    data-action="agent-list#delete"
                    class="shrink-0 p-3 text-zinc-600 hover:text-red-400 transition-colors"
                    title="Delete agent">
              <%= icon "trash", class: "size-4" %>
            </button>
          </div>
        </template>

        <%# List container %>
        <div data-agent-list-target="list" data-test="hub-agents-list" class="space-y-2"></div>

        <%# Empty state %>
        <div data-agent-list-target="empty" class="hidden py-8 text-center">
          <%= icon "sparkles", class: "size-12 text-zinc-700 mx-auto mb-4" %>
          <h3 class="text-lg font-medium text-zinc-300 mb-2">No agents running</h3>
          <p class="text-sm text-zinc-500 mb-4">Start a new agent to begin working</p>
          <button type="button"
                  data-controller="requires-connection"
                  data-requires-connection-key-value="<%= Current.hub.id %>"
                  command="show-modal"
                  commandfor="new-agent-modal"
                  class="inline-flex items-center gap-2 px-4 py-2 bg-primary-600 hover:bg-primary-500 text-white rounded-lg text-sm font-medium transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
                  disabled>
            <%= icon "plus", class: "size-4" %>
            New Agent
          </button>
        </div>

        <%# Loading state — replaces the entire section while connecting %>
        <div data-agent-list-target="loading" class="py-12 text-center">
          <div class="inline-flex items-center justify-center size-16 bg-primary-500/10 rounded-2xl mb-5">
            <svg class="size-8 text-primary-400 animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.288 15.038a5.25 5.25 0 017.424 0M5.106 11.856c3.807-3.808 9.98-3.808 13.788 0M1.924 8.674c5.565-5.565 14.587-5.565 20.152 0M12.53 18.22l-.53.53-.53-.53a.75.75 0 011.06 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-medium text-zinc-200 mb-2">Connecting to hub...</h3>
          <p class="text-sm text-zinc-500 max-w-xs mx-auto">
            Establishing a secure connection. Agents will appear here once connected.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
