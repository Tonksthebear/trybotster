<div class="h-full flex flex-col overflow-hidden">
  <%# Header %>
  <div class="shrink-0 border-b border-zinc-800 bg-zinc-900/50">
    <div class="px-4 py-4 lg:py-6">
      <div class="flex items-start justify-between gap-4">
        <div class="min-w-0">
          <h1 class="text-xl lg:text-2xl font-bold text-zinc-100 font-mono truncate"><%= Current.hub.device&.name || Current.hub.identifier.truncate(32) %></h1>
          <p class="text-sm text-zinc-500 mt-1 truncate">
            <%= Current.hub.repo || "No repository" %>
          </p>
        </div>

        <%# Connection status - CSS-driven via data attributes %>
        <div data-controller="hub-status"
             data-hub-status-hub-id-value="<%= Current.hub.id %>"
             data-hub-status-state-value="disconnected"
             class="group flex items-center gap-2 shrink-0 text-sm font-medium">

          <%# Disconnected %>
          <span class="hidden group-data-[hub-status-state-value=disconnected]:flex items-center gap-2 text-zinc-500">
            <%= icon "signal-slash", class: "size-4" %>
            <span>Disconnected</span>
          </span>

          <%# Loading (WASM/session) %>
          <span class="hidden group-data-[hub-status-state-value=loading]:flex items-center gap-2 text-cyan-400">
            <%= icon "arrow-path", class: "size-4 animate-spin" %>
            <span class="text-zinc-400">Loading encryption...</span>
          </span>

          <%# Connecting (channel) %>
          <span class="hidden group-data-[hub-status-state-value=connecting]:flex items-center gap-2 text-cyan-400">
            <%= icon "arrow-path", class: "size-4 animate-spin" %>
            <span class="text-zinc-400">Connecting...</span>
          </span>

          <%# Handshake (waiting for CLI) %>
          <span class="hidden group-data-[hub-status-state-value=handshake]:flex items-center gap-2 text-amber-400">
            <%= icon "arrow-path", class: "size-4 animate-spin" %>
            <span>Waiting for CLI...</span>
          </span>

          <%# Connected %>
          <span class="hidden group-data-[hub-status-state-value=connected]:flex items-center gap-2 text-emerald-400">
            <%= icon "lock-closed", variant: :solid, class: "size-4" %>
            <span>Connected</span>
          </span>

          <%# Error %>
          <span class="hidden group-data-[hub-status-state-value=error]:flex items-center gap-2 text-red-400">
            <%= icon "exclamation-circle", class: "size-4" %>
            <span>Connection failed</span>
          </span>
        </div>
      </div>
    </div>
  </div>

  <%# Content %>
  <div class="flex-1 overflow-y-auto">
    <div class="max-w-3xl mx-auto px-4 py-6 lg:py-8">
      <%# Hub Info Card %>
      <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-4 lg:p-6 mb-6">
        <h2 class="text-sm font-medium text-zinc-400 uppercase tracking-wider mb-4">Hub Information</h2>
        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <dt class="text-xs text-zinc-500">Identifier</dt>
            <dd class="text-sm text-zinc-200 font-mono mt-1 truncate"><%= Current.hub.identifier %></dd>
          </div>
          <div>
            <dt class="text-xs text-zinc-500">Repository</dt>
            <dd class="text-sm text-zinc-200 font-mono mt-1 truncate"><%= Current.hub.repo || "â€”" %></dd>
          </div>
          <div>
            <dt class="text-xs text-zinc-500">Status</dt>
            <dd class="text-sm mt-1 flex items-center gap-2">
              <span class="size-2 rounded-full <%= Current.hub.active? ? 'bg-success-500' : 'bg-zinc-600' %>"></span>
              <span class="text-zinc-200"><%= Current.hub.active? ? "Online" : "Offline" %></span>
            </dd>
          </div>
          <div>
            <dt class="text-xs text-zinc-500">Last Seen</dt>
            <dd class="text-sm text-zinc-200 mt-1">
              <% if Current.hub.last_seen_at %>
                <%= time_ago_in_words(Current.hub.last_seen_at) %> ago
              <% else %>
                Never
              <% end %>
            </dd>
          </div>
        </dl>
      </div>

      <%# Agents Section %>
      <div class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-4 lg:p-6"
           data-controller="agent-list"
           data-agent-list-hub-id-value="<%= Current.hub.id %>"
           data-agent-list-agents-value="[]"
           id="hub-agent-list">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-sm font-medium text-zinc-400 uppercase tracking-wider">Agents</h2>
          <button type="button"
                  data-controller="requires-connection"
                  data-requires-connection-key-value="<%= Current.hub.id %>"
                  class="p-1.5 text-zinc-500 hover:text-primary-400 hover:bg-zinc-800/50 rounded transition-colors disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:text-zinc-500"
                  title="New Agent"
                  command="show-modal"
                  commandfor="new-agent-modal"
                  disabled>
            <%= icon "plus", class: "size-5" %>
          </button>
        </div>

        <%# Template for agent cards %>
        <template data-agent-list-target="template">
          <a data-href="/hubs/{hubId}/agents/{index}"
             data-agent-id
             class="flex items-center gap-3 px-4 py-3 bg-zinc-800/50 hover:bg-zinc-800 border border-zinc-700/50 hover:border-zinc-700 rounded-lg transition-colors">
            <div class="size-10 rounded-lg bg-zinc-700/50 flex items-center justify-center text-zinc-400">
              <%= icon "command-line", class: "size-5" %>
            </div>
            <div class="flex-1 min-w-0">
              <div data-field="name" class="text-sm font-medium text-zinc-200 truncate font-mono"></div>
              <div class="text-xs text-zinc-500">Agent <span data-field="index"></span></div>
            </div>
            <%= icon "chevron-right", class: "size-5 text-zinc-600" %>
          </a>
        </template>

        <%# List container %>
        <div data-agent-list-target="list" data-test="hub-agents-list" class="space-y-2"></div>

        <%# Empty state %>
        <div data-agent-list-target="empty" class="hidden py-8 text-center">
          <%= icon "sparkles", class: "size-12 text-zinc-700 mx-auto mb-4" %>
          <h3 class="text-lg font-medium text-zinc-300 mb-2">No agents running</h3>
          <p class="text-sm text-zinc-500 mb-4">Start a new agent to begin working</p>
          <button type="button"
                  data-controller="requires-connection"
                  data-requires-connection-key-value="<%= Current.hub.id %>"
                  command="show-modal"
                  commandfor="new-agent-modal"
                  class="inline-flex items-center gap-2 px-4 py-2 bg-primary-600 hover:bg-primary-500 text-white rounded-lg text-sm font-medium transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
                  disabled>
            <%= icon "plus", class: "size-4" %>
            New Agent
          </button>
        </div>

        <%# Loading state %>
        <div data-agent-list-target="loading" class="py-8 text-center">
          <%= icon "cpu-chip", class: "size-8 text-zinc-700 mx-auto mb-3" %>
          <p class="text-sm text-zinc-500">Connecting to hub...</p>
          <p class="text-xs text-zinc-600 mt-1">Agents will appear here once connected</p>
        </div>
      </div>
    </div>
  </div>

  <%# New Agent Modal - Two Step Flow %>
  <%= render Elements::DialogComponent.new(id: "new-agent-modal") do %>
    <div data-controller="new-agent-form"
         data-new-agent-form-hub-id-value="<%= Current.hub.id %>"
         class="flex flex-col min-h-0">
    <%# Step 1: Worktree Selection %>
    <div data-new-agent-form-target="step1" class="flex flex-col min-h-0">
      <%# Header %>
      <div class="px-5 py-4 border-b border-zinc-800 bg-zinc-950/50">
        <div class="flex items-center gap-3">
          <span class="size-7 rounded-md bg-primary-500/20 text-primary-400 text-xs font-bold flex items-center justify-center border border-primary-500/30">1</span>
          <div>
            <h3 class="text-base font-semibold text-zinc-100">Select Worktree</h3>
            <p class="text-xs text-zinc-500 mt-0.5">Choose existing or create new</p>
          </div>
        </div>
      </div>

      <div class="flex-1 overflow-y-auto">
        <%# Existing Worktrees Section %>
        <div class="p-5">
          <div class="flex items-center gap-2 mb-3">
            <svg class="size-4 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
            </svg>
            <h4 class="text-xs font-medium text-zinc-400 uppercase tracking-wider">Existing</h4>
          </div>
          <div data-new-agent-form-target="worktreeList" class="space-y-1.5 max-h-40 overflow-y-auto">
            <div class="py-6 text-center">
              <span class="text-sm text-zinc-600">No existing worktrees</span>
            </div>
          </div>
        </div>

        <%# Divider %>
        <div class="px-5">
          <div class="flex items-center gap-3">
            <div class="flex-1 h-px bg-zinc-800"></div>
            <span class="text-xs text-zinc-600 uppercase tracking-wider">or</span>
            <div class="flex-1 h-px bg-zinc-800"></div>
          </div>
        </div>

        <%# Create New Section %>
        <div class="p-5">
          <div class="flex items-center gap-2 mb-3">
            <svg class="size-4 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            <h4 class="text-xs font-medium text-zinc-400 uppercase tracking-wider">Create New</h4>
          </div>
          <div class="flex gap-2">
            <input type="text"
                   data-new-agent-form-target="newBranchInput"
                   placeholder="Issue # or branch name"
                   class="flex-1 px-3 py-2.5 bg-zinc-950 border border-zinc-700 rounded text-zinc-100 placeholder-zinc-600 text-sm font-mono focus:outline-hidden focus:border-primary-500 focus:ring-1 focus:ring-primary-500/50 transition-colors"
                   autocomplete="off"
                   data-action="keydown.enter->new-agent-form#selectNewBranch">
            <%= render Elements::ButtonComponent.new("Next", data: { action: "new-agent-form#selectNewBranch" }) %>
          </div>
        </div>
      </div>

      <%# Footer %>
      <div class="px-5 py-4 border-t border-zinc-800 bg-zinc-950/30">
        <%= render Elements::ButtonComponent.new("Cancel",
          color: :neutral,
          variant: :ghost,
          class: "w-full",
          command: "close",
          commandfor: "new-agent-modal"
        ) %>
      </div>
    </div>

    <%# Step 2: Prompt Input %>
    <div data-new-agent-form-target="step2" class="hidden flex flex-col min-h-0">
      <%# Header %>
      <div class="px-5 py-4 border-b border-zinc-800 bg-zinc-950/50">
        <div class="flex items-center gap-3">
          <span class="size-7 rounded-md bg-primary-500/20 text-primary-400 text-xs font-bold flex items-center justify-center border border-primary-500/30">2</span>
          <div>
            <h3 class="text-base font-semibold text-zinc-100">Initial Prompt</h3>
            <p class="text-xs text-zinc-500 mt-0.5">What should the agent work on?</p>
          </div>
        </div>
      </div>

      <div class="flex-1 overflow-y-auto p-5">
        <%# Selection Summary %>
        <div class="mb-4 px-3 py-2.5 bg-zinc-950 border border-zinc-800 rounded flex items-center gap-3">
          <svg class="size-4 text-success-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <div class="min-w-0 flex-1">
            <span class="text-xs text-zinc-500 block">Worktree</span>
            <span data-new-agent-form-target="selectedWorktreeLabel" class="text-sm text-zinc-200 font-mono truncate block"></span>
          </div>
        </div>

        <%# Prompt Input %>
        <div class="flex items-center gap-2 mb-2">
          <svg class="size-4 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <label class="text-xs font-medium text-zinc-400 uppercase tracking-wider">Task</label>
          <span class="text-xs text-zinc-600">(optional)</span>
        </div>
        <textarea data-new-agent-form-target="promptInput"
                  rows="4"
                  placeholder="Describe the task..."
                  class="w-full px-3 py-2.5 bg-zinc-950 border border-zinc-700 rounded text-zinc-100 placeholder-zinc-600 text-sm focus:outline-hidden focus:border-primary-500 focus:ring-1 focus:ring-primary-500/50 transition-colors resize-none"></textarea>
        <p class="text-xs text-zinc-600 mt-2">Leave blank for interactive session</p>
      </div>

      <%# Footer %>
      <div class="px-5 py-4 border-t border-zinc-800 bg-zinc-950/30 flex gap-2">
        <%= render Elements::ButtonComponent.new("Back",
          color: :neutral,
          variant: :outline,
          class: "flex-1",
          data: { action: "new-agent-form#goBackToStep1" }
        ) %>
        <%= render Elements::ButtonComponent.new("Start Agent",
          class: "flex-1",
          data: { action: "new-agent-form#submit" },
          command: "close", commandfor: "new-agent-modal"
        ) %>
      </div>
    </div>
    </div>
  <% end %>
</div>
