<% hubs.each do |hub| %>
  <%= link_to hub_path(hub),
      class: "sidebar-hub-link flex items-center gap-2 px-2 py-1.5 rounded text-sm transition-colors text-zinc-400 hover:bg-zinc-800/50 hover:text-zinc-200",
      data: { turbo_frame: "_top", hub_id: hub.id } do %>
    <span class="shrink-0 size-2 rounded-full <%= hub.active? ? 'bg-success-500' : 'bg-zinc-600' %>"></span>
    <span class="truncate font-mono text-xs"><%= hub.repo.presence || hub.identifier.truncate(20) %></span>
  <% end %>
<% end %>

<% if hubs.empty? %>
  <p class="px-2 py-4 text-center text-xs text-zinc-600">No hubs connected</p>
<% end %>
