<div class="max-w-2xl mx-auto px-4 py-8">
  <%# Header %>
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-zinc-100 mb-2">Settings</h1>
    <p class="text-sm text-zinc-400">
      Manage your account preferences and security settings
    </p>
  </div>

  <% if flash[:notice] %>
    <div class="bg-success-500/10 border border-success-500/20 rounded-lg p-4 mb-6">
      <div class="flex items-center gap-3">
        <svg class="w-5 h-5 text-success-400 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <p class="text-sm text-success-300"><%= flash[:notice] %></p>
      </div>
    </div>
  <% end %>

  <%= form_with model: current_user, url: settings_path, method: :patch, builder: Elements::FormBuilder, class: "space-y-6" do |f| %>
    <%# Security Settings %>
    <div class="bg-zinc-900 border border-zinc-800 rounded-lg overflow-hidden">
      <div class="px-6 py-4 border-b border-zinc-800">
        <div class="flex items-center gap-3">
          <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
          <span class="font-medium text-zinc-200">Security</span>
        </div>
      </div>

      <div class="p-6">
        <label class="flex items-start gap-4 cursor-pointer group">
          <div class="shrink-0 mt-1">
            <%= f.toggle :server_assisted_pairing %>
          </div>
          <div class="flex-1">
            <span class="block font-medium text-zinc-200 group-hover:text-zinc-100 transition-colors">
              Enable Convenience Mode
            </span>
            <span class="block text-sm text-zinc-500 mt-1">
              Click hubs in the dashboard to connect directly. Less secure because the server sees encryption keys.
            </span>
          </div>
        </label>

        <div class="mt-4 p-4 bg-warning-500/10 border border-warning-500/20 rounded-lg">
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-warning-400 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="text-sm text-warning-200/80">
              <strong class="text-warning-300">Recommended:</strong> Keep disabled and scan the QR code from your CLI.
              The key is transmitted via URL fragment which never reaches the server (MITM-proof).
            </p>
          </div>
        </div>
      </div>
    </div>

    <%# Submit %>
    <div class="flex justify-end">
      <%= render Elements::ButtonComponent.new("Save Settings", as: :button, type: :submit, size: :lg) %>
    </div>
  <% end %>

  <%# API Token Card %>
  <div class="bg-zinc-900 border border-zinc-800 rounded-lg overflow-hidden"
       data-controller="clipboard">
    <div class="px-6 py-4 border-b border-zinc-800 flex items-center justify-between">
      <div class="flex items-center gap-3">
        <svg class="size-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
        </svg>
        <span class="font-medium text-zinc-200">API Token</span>
      </div>
      <button type="button"
              data-action="clipboard#copy"
              data-clipboard-target="button"
              class="flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-primary-400 hover:text-primary-300 hover:bg-zinc-800 rounded transition-colors">
        <svg data-clipboard-target="icon" class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
        </svg>
        <span data-clipboard-target="label">Copy</span>
      </button>
    </div>
    <div class="p-6">
      <input type="text"
             data-clipboard-target="source"
             value="<%= current_user.api_key %>"
             readonly
             class="w-full px-4 py-3 bg-zinc-950 border border-zinc-700 rounded font-mono text-sm text-zinc-300 focus:outline-hidden focus:border-primary-500 selection:bg-primary-500/30">
      <p class="text-xs text-zinc-600 mt-3">Use this token to authenticate with the MCP server</p>
    </div>
  </div>

  <%# Account Info %>
  <div class="bg-zinc-900 border border-zinc-800 rounded-lg overflow-hidden">
    <div class="px-6 py-4 border-b border-zinc-800">
      <div class="flex items-center gap-3">
        <svg class="size-5 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        <span class="font-medium text-zinc-200">Account</span>
      </div>
    </div>

    <div class="px-6 py-4 flex items-center justify-between">
        <span class="text-sm text-zinc-500">GitHub</span>
        <% if current_user.username.present? %>
          <span class="inline-flex items-center gap-2 text-sm text-zinc-300">
            <svg class="size-4" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
            </svg>
            <%= current_user.username %>
          </span>
        <% else %>
          <span class="text-sm text-zinc-600">Not connected</span>
        <% end %>
    </div>
  </div>
</div>
