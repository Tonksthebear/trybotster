<% sections.each do |section| %>
  <div class="<%= 'mt-6' unless section == sections.first %>">
    <h3 class="text-xs font-medium text-zinc-500 uppercase tracking-wider px-2 mb-2">
      <%= section[:title] %>
    </h3>
    <ul class="space-y-0.5">
      <% section[:pages].each do |page| %>
        <% page_path = "#{section[:slug]}/#{page[:slug]}" %>
        <% active = current_path == page_path %>
        <li>
          <%= link_to page[:title],
                doc_path(path: page_path),
                class: class_names(
                  "block px-2 py-1.5 text-sm rounded transition-colors",
                  "text-primary-400 bg-zinc-800/50 font-medium" => active,
                  "text-zinc-400 hover:text-zinc-200 hover:bg-zinc-800/30" => !active
                ) %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
